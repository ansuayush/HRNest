@model IList<Mitr.Models.FundRaising.RefferalsTask>
<div class="table-responsive">
    <table id="table_@ViewBag.Status" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead>
            <tr>
                <th class="w-33">S.No </th>
                <th>Lead No</th>
                <th>Lead Date</th>
                <th>Lead Name</th>
                <th>Refferal Date</th>
                <th>Refferal Name</th>
                <th>Refferal By</th>

                <th class="tw-100">Action </th>
            </tr>
            <tr class="searchbar">
                <th class="searchhide"></th>
                <th></th>
                <th class="searchhide"></th>
                <th></th>
                <th class="searchhide"> </th>
                <th> </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @{ int Count = 0; }
            @for (int i = 0; i < Model.Count; i++)
            {
                Count = Count + 1;
                <tr>
                    <td>@Count</td>
                    <td>@Model[i].DocNo</td>
                    <td>@Model[i].DocDate</td>
                    <td>@Model[i].NickName</td>
                    <td>@Model[i].ReferredDate</td>
                    <td>@Model[i].ReferralName</td>
                    <td>@Model[i].Referredby</td>
                    <td>
                        @if (ViewBag.Status == "PENDING")
                        {
                            <select class="form-control applyselect" OnChange="UpdateStatus(this,@Model[i].Id)">
                                <option @(Model[i].ReferralStatus != null ? Model[i].ReferralStatus == "" ? "Selected" : "" : "") value="">Select</option>
                                <option @(Model[i].ReferralStatus != null ? Model[i].ReferralStatus == "NA" ? "Selected" : "" : "") value="NA">NA</option>
                                <option @(Model[i].ReferralStatus != null ? Model[i].ReferralStatus == "Interested" ? "Selected" : "" : "") value="Interested">Interested</option>
                                <option @(Model[i].ReferralStatus != null ? Model[i].ReferralStatus == "Not_Interested" ? "Selected" : "" : "") value="Not_Interested">Not Interested</option>
                            </select>
                        }
                        else
                        {
                           @(Model[i].ReferralStatus=="Not_Interested"?"Not Interested": Model[i].ReferralStatus)
                        }

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>