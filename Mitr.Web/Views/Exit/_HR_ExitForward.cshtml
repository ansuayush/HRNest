
@model Exit.Req_Process.Forward

@using (Ajax.BeginForm("_HR_ExitForward", "Exit",
		new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/Exit/_HR_ExitForward*" + ViewBag.Exit_ID) },
		 new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnProcessSuccess", OnBegin = "ShowLoadingDialog()" },
	new { @id = "_RequestProcessingFrom" })
	)
{

	<table class="table mt-0">
		<tbody>
			@for (int i = 0; i < Model.LevelList.Count(); i++)
			{
				<tr>
					<td>
						<strong>
							@Model.LevelList[i].LevelType @Html.Raw((i==0? "<sup style='color:red'>*</sup>" : ""))
							@Html.HiddenFor(x => x.LevelList[i].LevelType)
						</strong>
					</td>
					<td colspan="0" class="tw-100">
						@Html.DropDownListFor(x => Model.LevelList[i].ID, new SelectList(Model.EmpList, "ID", "Name", Model.LevelList[i].ID), "Select User",
		new { @class = "form-control  applyselect" })
						@Html.ValidationMessageFor(model => Model.LevelList[i].ID, "", new { @class = "text-danger" })
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="col-sm-12 text-left">
		<button type="submit" name="Command" value="Add" class="btn mtr-o-grn btn-l ripplelink"> <i class="fas fa-share"></i>Submit </button>
		<button type="button" class="btn cnl-btn btn-l ripplelink close" data-dismiss="modal"><i class="fas fa-times"></i>Close</button>
	</div>

}
