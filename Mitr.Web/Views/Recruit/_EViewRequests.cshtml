
@model Mitr.Models.EXRecruit.View

@if (!string.IsNullOrEmpty(Model.AmendRemarks))
{
	<div class="text-right">
		@Model.AmendRemarks
	</div>
}

<h2 class="header-two"><i class="fas fa-users"></i>Hiring Details</h2>
<div class="row">
    <div class="col-lg-3 col-md-4 col-sm-6  form-group">
        <label>Code</label>
        @Html.TextBoxFor(x => Model.REC_Code, new { @class = "form-control", @id = "pro", @readonly = "readonly" })
        <input id="hdnlink" value="@(clsApplicationSetting.GetConfigValue("WebsiteURL")+"Career/Home/Application?Code="+Model.REC_Code)" type="hidden">

    </div>
    <div class="col-lg-3 col-md-4 col-sm-6  form-group">
        <label>Project Name</label>
        @Html.TextBoxFor(x => Model.ProjectName, new { @class = "form-control", @id = "pro", @readonly = "readonly" })
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6  form-group">
        <label>Project Manager</label>
        @Html.TextBoxFor(x => Model.Managername, new { @class = "form-control", @id = "PM", @readonly = "readonly" })
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6  form-group">
        <label>Job Title</label>
        @Html.TextBoxFor(x => Model.JobTitle, new { @class = "form-control", @id = "jb", @readonly = "readonly" })
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6  form-group">
        <label>Location</label>
        @Html.TextBoxFor(x => Model.LocatioNName, new { @class = "form-control", @id = "loc", @readonly = "readonly" })
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6  form-group">
        <label>Due Date</label>
        @Html.TextBoxFor(x => Model.DueDate, new { @class = "form-control", @id = "due", @readonly = "readonly" })
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6  form-group align-self-end">
        <a class="btn mtr-g-grn mb-0 btn-l ripplelink pull-right" data-toggle="modal" data-target="#viewdetail">
            <i class="fas fa-eye"></i>View JD
        </a>
    </div>
   
    @Html.TextBoxFor(x => Model.JobDescription, new { id = "hddJobDescription", @class = "form-control", @type = "hidden" })
    @Html.TextBoxFor(x => Model.Qualification, new { id = "hddJobQulification", @class = "form-control", @type = "hidden" })
    @Html.TextBoxFor(x => Model.SkillsName, new { id = "hddJobSkills", @class = "form-control", @type = "hidden" })


</div>


<div class="modal fade pop-dgn" id="viewdetail">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header blk-gdn-btn">
				<h4 class="modal-title">
					<i class="fas fa-user-check"></i>Recruitment Details
				</h4>
				<div class="close" data-dismiss="modal">&times;</div>
			</div>
			<div class="modal-body p-2">

				<h2 class="header-two"><i class="fas fa-users"></i>Project Information</h2>
				<div class="row">
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>Code</label>
						@Html.TextBoxFor(x => Model.REC_Code, new { @class = "form-control", @readonly = "readonly" })
					</div>
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>Project Name</label>
						@Html.TextBoxFor(x => Model.ProjectName, new { @class = "form-control", @readonly = "readonly" })
					</div>
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>Project Manager</label>
						@Html.TextBoxFor(x => Model.Managername, new { @class = "form-control", @readonly = "readonly" })

					</div>
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>Start Date</label>
						@Html.TextBoxFor(x => Model.StartDate, new { @class = "form-control", @readonly = "readonly" })
					</div>
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>End Date</label>
						@Html.TextBoxFor(x => Model.EndDate, new { @class = "form-control", @readonly = "readonly" })
					</div>
				</div>


				<div class="row">
					<div class="col-lg-12"><h2 class="header-two"><i class="fas fa-users"></i>Hiring Details</h2></div>
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>Job Title</label>
						@Html.TextBoxFor(x => Model.JobTitle, new { @class = "form-control", @readonly = "readonly" })
					</div>

					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>%Time</label>
						@Html.TextBoxFor(x => Model.Time_Per, new { @class = "form-control", @readonly = "readonly" })
					</div>
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>Thematic Area</label>
						@Html.TextBoxFor(x => Model.ThematicArea, new { @class = "form-control", @readonly = "readonly" })
					</div>
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>Location</label>
						@Html.TextBoxFor(x => Model.LocatioNName, new { @class = "form-control", @readonly = "readonly" })
					</div>
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>Job Sub Title</label>
						@Html.TextBoxFor(x => Model.Job_SubTitle, new { @class = "form-control", @readonly = "readonly" })

					</div>
					<div class="col-lg-3 col-md-4 col-sm-6  form-group">
						<label>Due Date</label>
						@Html.TextBoxFor(x => Model.DueDate, new { @class = "form-control", @readonly = "readonly" })

					</div>
					<div class="col-lg-3 col-md-3 col-sm-6 form-group">
						<label>Staff Category</label>
						@Html.TextBoxFor(x => Model.Staff_Cat, new { @class = "form-control", @readonly = "readonly" })

					</div>
					<div class="col-lg-3 col-md-3 col-sm-6 form-group">
						<label>Hiring Type</label>
						@Html.TextBoxFor(x => Model.REC_Type, new { @class = "form-control", @readonly = "readonly" })

					</div>
				</div>
				<h2 class="header-two"><i class="fas fa-file-alt"></i>JD Details</h2>
				<div class="row">
					<div class="col-lg-6 col-md-6 col-sm-6  form-group">
						<label>Job Description</label>
						<div class="jdview">@Html.Raw(Model.JobDescription)</div>
					</div>
					<div class="col-lg-6 col-md-6 col-sm-6  form-group">
						<label>Qualification</label>
						<div class="jdview">@Html.Raw(Model.Qualification)</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6 col-md-6 col-sm-6  form-group">
						<label>Skills</label>
						@Html.TextBoxFor(x => Model.SkillsName, new { @class = "form-control", @readonly = "readonly" })
					</div>

					<div class="col-lg-2 col-md-2 col-sm-6  form-group">
						<label>Min. Experience</label>

						<div class="input-group w-80 ">
							@Html.TextBoxFor(x => Model.Experience, new { @class = "form-control text-center", @readonly = "readonly" })
							<div class="input-group-prepend">
								<span class="input-group-text" id="basic-addon1">Yrs</span>
							</div>
							<span class="field-validation-valid text-danger" data-valmsg-for="Experience" data-valmsg-replace="true"></span>
						</div>


					</div>

				</div>
				@if (ViewBag.IsEdit == "Y")
				{
					<div class="row">
						@using (Ajax.BeginForm("SetProjectTagging", "Recruit",
new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/Recruit/SetProjectTagging*" + ViewBag.REC_ReqID + "*" + ViewBag.IsEdit) },
new AjaxOptions { HttpMethod = "POST", OnSuccess = "ProjectTaggingSuccess", OnBegin = "ShowLoadingDialog();", OnFailure = "CloseLoadingDialog();" },
new { @id = "SetProjectTaggingFrom" })
)
						{
							<div class="col-lg-12 col-md-12 col-sm-12 form-group">
								<label>Project Vacancy Tagging</label>
								@Html.HiddenFor(model => model.Project_Tag)
								<select id="@Html.IdFor(x => Model.Project_TagID)" name="@Html.NameFor(x => Model.Project_TagID)" multiple="multiple" class="form-control applyselect">
									@*<option>Select</option>*@
									@if (Model.PendingList != null)
									{
										foreach (var item in Model.PendingList)
										{
											if (string.IsNullOrEmpty(Model.Project_Tag))
											{
												<option value="@item.ID"> @item.Name</option>
											}
											else
											{
												<option @(("#" + Model.Project_Tag.Replace(",", "#,#") + "#").Contains(("#" + item.ID + "#").ToString()) ? "selected" : "") value="@item.ID"> @item.Name</option>
											}
										}
									}
								</select>
							</div>

							<div class="text-center mt-2">
								<button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Save"><i class="fas fa-save"></i>Save</button>
								<button type="submit" style="display:none;" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Save"><i class="fas fa-save"></i>Download JD</button>
								<button type="button" class="btn cnl-btn ripplelink  pull-right" data-dismiss="modal">
									<i class="fas fa-times"></i>Close
								</button>
							</div>

						}

					</div>
				}
			</div>
		</div>
	</div>
</div>




