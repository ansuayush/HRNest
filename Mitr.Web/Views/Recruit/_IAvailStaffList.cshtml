@model IList<Mitr.Models.Recruit.InternalStaff>

@using (Ajax.BeginForm("_IAvailStaffList", "Recruit",
	  new { src = ViewBag.src },
	  new AjaxOptions { HttpMethod = "POST", OnSuccess = "AvailStaffListSuccess", OnBegin = " ShowLoadingDialog();", OnFailure = "CloseLoadingDialog();" },
  new { @id = "InternalStaffSuccessFrom", enctype = "multipart/form-data" })
  )
{

<div class="x_content table-currency">
	
	<div class="scroll h-247 ">

		<table id="tblStaff" class="table table-striped mt-0 fixedth gry-tbl dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
			<thead>
				<tr>
					<th scope="col" rowspan="2" class="text-center">Sno.</th>
					<th scope="col" rowspan="2">Name</th>
					<th scope="col" class="text-center" colspan="3">Impacts</th>

					<th scope="col" rowspan="2">Action</th>
				</tr>
				<tr>
					<th scope="col" rowspan="1" class="w-100">Relocation</th>
					<th scope="col" rowspan="1" class="w-100">Job</th>
					<th scope="col" rowspan="1" class="w-100">Title Pillar</th>
				</tr>
			</thead>
			<tbody>
				@{ int Cunt = 0;}
				@for (int i = 0; i < Model.Count; i++)
				{
					Cunt++;
					<tr>
						<td class="text-center">@Cunt</td>
						<td>
							<a> @Model[i].EmpName</a>
							@Html.HiddenFor(x => Model[i].EmpID)
							@Html.HiddenFor(x => Model[i].EmpName)
							@Html.HiddenFor(x => Model[i].EMPCode)
							@Html.HiddenFor(x => Model[i].Relocation)
							@Html.HiddenFor(x => Model[i].JobTitle)
							@Html.HiddenFor(x => Model[i].Pillar)
						</td>
						<td>
							<select name="@Html.NameFor(x => Model[i].RelocationByHR)" class="applyselect">
								<option @(Model[i].Relocation == "Yes" ? "selected" : "")>Yes</option>
								<option @(Model[i].Relocation == "No" ? "selected" : "")>No</option>
							</select>
						</td>
						<td>
							<select name="@Html.NameFor(x => Model[i].JobTitleByHR)" class="applyselect">
								<option @(Model[i].JobTitle == "Yes" ? "selected" : "")>Yes</option>
								<option @(Model[i].JobTitle == "No" ? "selected" : "")>No</option>
							</select>
						</td>
						<td>
							<select name="@Html.NameFor(x => Model[i].PillarByHR)" class="applyselect">
								<option @(Model[i].Pillar == "Yes" ? "selected" : "")>Yes</option>
								<option @(Model[i].Pillar == "No" ? "selected" : "")>No</option>
							</select>
						</td>


						<td class="text-center">
							<input type="checkbox" id="slt_@Cunt" name="@Html.NameFor(x => Model[i].Chck)">
							<label for="slt_@Cunt"></label>
						</td>
					</tr>
				}

			</tbody>
		</table>
	</div>
  	</div>	

	<div class="row">
		<div class="col-lg-12 text-center mt-2">
			<button type="submit" class="btn mtr-g-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fas fa-user-check"></i>Select</button>
			<button type="button" class="btn cnl-btn ripplelink  pull-right"><i class="fas fa-times"></i> Cancel</button>
		</div>
	</div>

}