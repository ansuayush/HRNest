@model Mitr.Models.InterviewSelection.Reject

@using (Ajax.BeginForm("_MoveToPoolOrReject", "Recruit",
    new { src = ViewBag.src },
    new AjaxOptions { HttpMethod = "POST", OnSuccess = "ActionOnSuccess", OnBegin = "ShowLoadingDialog()", OnFailure = "CloseLoadingDialog()" },
    new { @id = "_MoveToPoolOrRejectFrom", enctype = "multipart/form-data" }))
{
    <div class="row text-clr">
        <div class="col-lg-12 form-group">
            <label>Reason</label>
            @Html.TextAreaFor(x => x.Reason, new { @class = "form-control", @placeholder = "Enter" })
            @Html.ValidationMessageFor(x => x.Reason, "", new { @class = "text-danger" })
        </div>

        <div class="col-lg-12 text-center mt-2">
            <input type="checkbox" id="oa" name="@Html.NameFor(x => x.ChkMove)">
            <label for="oa"> Move to Talent Pool </label>
        </div>
        <div class="col-lg-12 text-center mt-2">
            <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Reject">
                <i class="fas fa-save"></i> Save
            </button>
            <button type="button" class="btn cnl-btn ripplelink pull-right" data-dismiss="modal">
                <i class="fas fa-times"></i> Cancel
            </button>
        </div>
    </div>
}
