
@model IList<Mitr.Models.Announcement>

@section style{
    @System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")
}
<div class="right_col" role="main">
    <div class="inner-main mb-5 pb-0">
        @Html.Partial("ListHeader_Partial", "Announcement List")


        <div class="row">
            <div class="col-md-12">

                <div class="x_content table-currency m-0">
                    <input type="hidden" id="hdnAddUrl" name="hdnAddUrl" value="@Url.Action("AnnouncementAdd",new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/Master/AnnouncementAdd*0") })" />


                    <div class="table-responsive">
                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>S.no.</th>
                                    <th>Action</th>
                                    <th>Priority</th>
                                    <th>Heading Name</th>
                                    <th>Description</th>
                                    <th>Start Date</th>
                                    <th>Expiry Date </th>
                                    <th>Inserted Date</th>
                                    <th>Updated Date</th>
                                    <th>IP Address</th>
                                </tr>
                                <tr class="searchbar">
                                    <th class="searchhide"></th>
                                    <th class="searchhide"></th>
                                    <th class="searchhide"></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th> </th>
                                    <th> </th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int Count = 0;}
                                @foreach (Mitr.Models.Announcement item in Model)
                                {
                                    Count++;
                                    <tr class="@(item.IsActive == true?"": "trrowred")">
                                        <td>@Count</td>

                                        <td>
                                            <input type="hidden" name="I" value="@item.AnnouncementID" />
                                            <input type="hidden" name="N" value="@item.HeadingName" />
                                            @if (clsApplicationSetting.GetSessionValue("Modify") == "True")
                                            {
                                                @Html.Raw(item.IsActive == true
                                               ? "<a  data-toggle='tooltip' data-original-title='Click to DeActivate' list='AnnouncementList' OP='0' class='AIsActive' > <i class='fa fa-check-circle checkgreen' aria-hidden='true'></i></a>"
                                               : "<a data-toggle='tooltip' data-original-title='Click to Activate' list='AnnouncementList' OP='1'  class='AIsActive' > <i class='fa fa-times-circle crossred' aria-hidden='true'></i></a>")

                                                <a title="Edit" href="@Url.Action("AnnouncementAdd",new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/Master/AnnouncementAdd*"+item.AnnouncementID) })" data-toggle='tooltip'><i class="fas fa-edit checkgreen" aria-hidden="true"></i> </a>
                                            }
                                        </td>
                                        <td>

                                            @Html.Raw(clsApplicationSetting.GetSessionValue("Modify") == "True" ? "<input type='number' class='listpriority' list='AnnouncementList' value=\"" + item.Priority + "\" />" : item.Priority.ToString())
                                        </td>


                                        <td> @item.HeadingName</td>
                                        <td> @item.Description</td>
                                        <td>@Convert.ToDateTime(item.StarDate).ToString("dd-MMM-yyyy")</td>
                                        <td>@Convert.ToDateTime(item.ExpiryDate).ToString("dd-MMM-yyyy")</td>
                                        <td>@item.createdat</td>
                                        <td>@item.modifiedat</td>
                                        <td>@item.IPAddress</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")

    @Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/AddInit.js"))
    @Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/ToolTip.js"))
}

