@model IList<Mitr.Models.Holiday>

@{
	string MenuID = "0";
	if (ViewBag.MenuID != null)
	{
		MenuID = ViewBag.MenuID;
	}
}

<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="card p-0">
			<div class="card-body p-0">
				<div class="x_content table-currency mt-0">
					<div class="table-responsive">
						<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
							<thead>
								<tr>
									<th>S.no.</th>
									<th>Action</th>
									<th>Priority</th>
									<th>Holiday Name</th>
									<th>Holiday Date</th>
									@*<th>Color</th>*@
									<th>Remarks</th>
									<th>Inserted Date</th>
									<th>Updated Date</th>
									<th>IP Address</th>
								</tr>
								<tr class="searchbar">
									<th class="searchhide"></th>
									<th class="searchhide"></th>
									<th class="searchhide"></th>
									<th> </th>
									<th> </th>
									@*<th></th>*@
									<th> </th>
									<th> </th>
									<th> </th>
									<th> </th>
								</tr>
							</thead>
							<tbody>
								@{ int Count = 0;}
								@foreach (Mitr.Models.Holiday item in Model)
								{
									Count++;
									<tr class="@(item.IsActive == true?"": "trrowred")">
										<td>@Count</td>
										<td>
											<input type="hidden" name="I" value="@item.HolidayID" />
											<input type="hidden" name="N" value="@item.Name" />
											@if (clsApplicationSetting.GetSessionValue("Modify") == "True")
											{
												@*@Html.Raw(item.IsActive == true
													? "<a  data-toggle='tooltip' data-original-title='Click to DeActivate' list='HolidayList' OP='0' class='AIsActive' > <i class='fa fa-check-circle checkgreen' aria-hidden='true'></i></a>"
													: "<a data-toggle='tooltip' data-original-title='Click to Activate' list='HolidayList' OP='1'  class='AIsActive' > <i class='fa fa-times-circle crossred' aria-hidden='true'></i></a>")*@
												@Html.Raw(item.IsActive == true
											 ? "<a  data-toggle='tooltip' data-original-title='Click to DeActivate' list='HolidayList' OP='0' class='AIsActive' > <i class='fa fa-check-circle checkgreen' aria-hidden='true'></i></a>"
											 : "<a data-toggle='tooltip' data-original-title='Click to Activate' list='HolidayList' OP='1'  class='AIsActive' > <i class='fa fa-times-circle crossred' aria-hidden='true'></i></a>")

												<a title="Edit" onclick="ListHeaderAdd(@item.HolidayID);" data-toggle='tooltip'><i class="fas fa-edit checkgreen" aria-hidden="true"></i> </a>
											}
										</td>
										<td>

											  @Html.Raw(clsApplicationSetting.GetSessionValue("Modify") == "True" ? "<input type='number' class='listpriority' list='HolidayList' value=\"" + item.Priority + "\" />" : item.Priority.ToString())
										</td>


										<td> @item.Name</td>
										<td>@Convert.ToDateTime(item.ShowDate).ToString("dd/MM/yyyy")</td>
										@*<td>@item.ColorName</td>*@
										<td>@item.Remarks</td>
										<td>@item.createdat</td>
										<td>@item.modifiedat</td>
										<td>@item.IPAddress</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
@Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/AddInit.js"))
