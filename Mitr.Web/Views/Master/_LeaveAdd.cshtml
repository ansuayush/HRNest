        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Priority<sup>*</sup></label>
            @Html.TextBoxFor(model => model.Priority, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Applicable For <sup>*</sup></label>
            @Html.DropDownListFor(model => model.ApplicableFor, new List<SelectListItem>
                                      {
                                         new SelectListItem{Text="All",Value="All" },
                                        new SelectListItem{Text="Male",Value="Male" },
                                        new SelectListItem{Text="Female",Value="Female" } ,
                                        new SelectListItem{Text="Others",Value="Others" }
                                      },
                  new { @class = "form-control  applyselect" })
            @Html.ValidationMessageFor(model => model.ApplicableFor, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
            <label>Others</label>
            <ul class="list-unstyled">
                <li>
                    <input type="checkbox" @(Model.Leave_forword == 1 ? "checked" : "") id="chekLeave_forword" name="@Html.NameFor(x=>x.chkFDLeave)" onchange="ShowCarryforwrd()" />
                    <label for="chekLeave_forword">Carry Forward to Next Year</label>
                </li>
                @*<li>
                    <input type="checkbox" @(Model.status == 1 ? "checked" : "") id="chkApprovalRequired" name="@Html.NameFor(x=>x.chkApprovalRequired)" />
                    <label for="chkApprovalRequired"> Approval Required</label>
                </li>*@
                <li>
                    <input type="checkbox" @(Model.ShownLeave == 1 ? "checked" : "") id="chkShownLeaveBalance" name="@Html.NameFor(x=>x.chkShowleavebalance)" />
                    <label for="chkShownLeaveBalance">Shown Leave Balance</label>
                </li>
            </ul>
        </div>

        <div id="DivCarryForward" class="col-lg-12">
            <div class="row">
                <div class="col-lg-6 form-group">
                    <label>Carry Forward In Leave	</label>
                    @Html.TextBoxFor(model => model.CFLeave, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CFLeave, "", new { @class = "text-danger" })

                </div>
                <div class="col-lg-6 form-group">
                    <label>Carry Forward In Limit	</label>
                    @Html.TextBoxFor(model => model.CFLimit, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CFLimit, "", new { @class = "text-danger" })


                </div>
            </div>

        </div>
    </div>

    <div class="row">

        @if (Model.LeaveID > 0)
        {
            <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Update</button>
        }
        else
        {
            <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
        }
    </div>

}
