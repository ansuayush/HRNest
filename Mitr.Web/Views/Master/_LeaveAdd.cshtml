
@model Mitr.Models.LeaveMaster



@using (Ajax.BeginForm("_LeaveAdd", "Master",
        new { src = ViewBag.src },
        new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess" },
    new { @id = "_LeaveAddFrom" })
    )
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => Model.LeaveID)
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Leave Name<sup>*</sup></label>
            @Html.TextBoxFor(model => model.LeaveName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LeaveName, "", new { @class = "text-danger" })
        </div>

        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Leave Type	<sup>*</sup></label>
            @{
                List<SelectListItem> LeaveTypeItem = new List<SelectListItem>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    {
            new SelectListItem{Text="Full Paid",Value="1" },
            new SelectListItem{Text="Not Paid",Value="2" }
            };
            }
            @Html.DropDownListFor(model => model.LeaveType, new SelectList(LeaveTypeItem, "Value", "text", Model.LeaveType), new { @class = "form-control applyselect" })
            @Html.ValidationMessageFor(model => model.LeaveType, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Due Type	<sup>*</sup></label>
            @{
                List<SelectListItem> DueTypeItem = new List<SelectListItem>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    {
            new SelectListItem{Text="Monthly",Value="1" },
            new SelectListItem{Text="Yearly",Value="2" }
            };
            }
            @Html.DropDownListFor(model => model.DueType, new SelectList(DueTypeItem, "Value", "text", Model.DueType), new { @class = "form-control applyselect" })
            @Html.ValidationMessageFor(model => model.DueType, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Leave Hours<sup>*</sup></label>
            @Html.TextBoxFor(model => model.NOOfLeave, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NOOfLeave, "", new { @class = "text-danger" })
        </div>
