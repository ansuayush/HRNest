                <option @(Model.ColorApplied == "Purplish Blue" ? "selected" : "") Value="rgb(137,155,207)^Purplish Blue">Purplish Blue</option>
                <option @(Model.ColorApplied == "Royal Blue" ? "selected" : "") Value="rgb(0,79,163)^Royal Blue">Royal Blue</option>
            </select>
            @Html.ValidationMessageFor(model => model.ColorApplied, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Color for Approved Leave</label>
            <select id="@Html.IdFor(model => model.ColorAppproved)" name="@Html.NameFor(model => model.ColorAppproved)" class="form-control applyselect">
                <option Value="">Select</option>
                <option @(Model.ColorAppproved == "Orange" ? "selected" : "") Value="rgb(249,161,58)^Orange">Orange</option>
                <option @(Model.ColorAppproved == "Light Green" ? "selected" : "") Value="rgb(174,212,119)^Light Green">Light Green</option>
                <option @(Model.ColorAppproved == "Dark Green" ? "selected" : "") Value="rgb(79,134,154)^Dark Green">Dark Green</option>
                <option @(Model.ColorAppproved == "Mulberry" ? "selected" : "") Value="rgb(129,6,84)^Mulberry">Mulberry</option>
                <option @(Model.ColorAppproved == "Purple" ? "selected" : "") Value="rgb(105,32,126)^Purple">Purple</option>
                <option @(Model.ColorAppproved == "Lavender" ? "selected" : "") Value="rgb(112,130,192)^Lavender">Lavender</option>
                <option @(Model.ColorAppproved == "Purplish Blue" ? "selected" : "") Value="rgb(137,155,207)^Purplish Blue">Purplish Blue</option>
                <option @(Model.ColorAppproved == "Royal Blue" ? "selected" : "") Value="rgb(0,79,163)^Royal Blue">Royal Blue</option>
