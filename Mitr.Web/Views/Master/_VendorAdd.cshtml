
@model Mitr.Models.Vendor



@using (Ajax.BeginForm("_VendorAdd", "Master",
        new { src = ViewBag.src },
        new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess" },
    new { @id = "_VendorAddFrom" })
    )
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => Model.VendorID)
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Code <sup>*</sup></label>
            @Html.TextBoxFor(model => model.VendorCode, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.VendorCode, "", new { @class = "text-danger" })
        </div>

        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Name<sup>*</sup></label>
            @Html.TextBoxFor(model => model.VendorName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.VendorName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
            <label>Address </label>
            @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>

        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Contact person</label>
            @Html.TextBoxFor(model => model.Representative, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Representative, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Contact No</label>
            @Html.TextBoxFor(model => model.ContactNo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>PAN</label>
            @Html.TextBoxFor(model => model.PAN, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PAN, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>LST No</label>
            @Html.TextBoxFor(model => model.LSTNo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LSTNo, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>CST NO</label>
            @Html.TextBoxFor(model => model.CSTNo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CSTNo, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Priority<sup>*</sup></label>
            @Html.TextBoxFor(model => model.Priority, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
        </div>


    </div>

    <div class="row">

        @if (Model.VendorID > 0)
        {
            <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Update</button>
        }
        else
        {
            <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
        }
    </div>

}
