

@model Mitr.Models.PerKM




@using (Ajax.BeginForm("_AddPerKM", "Master",
		new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID + "*" + "/Master/_AddPerKM*" + ViewBag.ID) },
		 new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnBegin = "ShowLoadingDialog()" },
			new { @id = "AddPerKM" })
	)
{

	
	@Html.AntiForgeryToken()
	@Html.HiddenFor(model => model.Id)

	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 form-group">
			<label>KM<sup>*</sup></label>
			@Html.TextBoxFor(model => model.KM, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.KM, "", new { @class = "text-danger" })
		</div>
		<div class="col-lg-6 col-md-6 col-sm-6 form-group">
			<label>Per KM Rate </label>
			@Html.TextBoxFor(model => model.KMRate, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.KMRate, "", new { @class = "text-danger" })
		</div>
		<div class="col-lg-12 col-md-12 col-sm-6 form-group">
			<label>From </label>
			@Html.TextAreaFor(model => model.FromKm, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.FromKm, "", new { @class = "text-danger" })
		</div>
		<div class="col-lg-12 col-md-12 col-sm-6 form-group">
			<label>To </label>
			@Html.TextAreaFor(model => model.ToKm, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.ToKm, "", new { @class = "text-danger" })
		</div>
		<div class="col-lg-12 col-md-12 col-sm-6 form-group">
			<label>Vechile Type </label>
			@Html.TextAreaFor(model => model.VehicleType, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.VehicleType, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="row">

		@if (Model.Id > 0)
		{
			<button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Update</button>
		}
		else
		{
			<button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
		}
	</div>

}