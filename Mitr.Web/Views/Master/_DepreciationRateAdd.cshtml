
@model Mitr.Models.DepreciationRate



@using (Ajax.BeginForm("_DepreciationRateAdd", "Master",
        new { src = ViewBag.src },
        new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess" },
    new { @id = "_DepreciationRateAddFrom" })
    )
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => Model.DEPID)
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Code<sup>*</sup></label>
            @Html.TextBoxFor(model => model.MainCode, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MainCode, "", new { @class = "text-danger" })
        </div>
       
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Method<sup>*</sup></label>
            @{
                List<SelectListItem> DropDownList = new List<SelectListItem>
{
            new SelectListItem{Text="SLM",Value="SLM" },
            new SelectListItem{Text="WDV",Value="WDV" }
            };
            }
            @Html.DropDownListFor(model => model.Method, new SelectList(DropDownList, "Value", "text", Model.Method), "Select", new { @class = "form-control " })

            @Html.ValidationMessageFor(model => model.Method, "", new { @class = "text-danger" })
        </div>

       
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Dep Rate %<sup>*</sup></label>
            @Html.TextBoxFor(model => model.DepRate, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DepRate, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <input type="checkbox" id="chkMultiple" name="@Html.NameFor(x=>x.chkMultiple)" @(Model.Multiple == 1 ? "checked" : "") />
            <label for="chkMultiple">Multiple Shift Applicable</label>
        </div>


        <div class="col-lg-6 col-md-6 col-sm-6 form-group multiplediv">
            <label>Rate for Double Shift %</label>
            @Html.TextBoxFor(model => model.DepRateDouble, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DepRateDouble, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group multiplediv">
            <label>Rate for Triple Shift %</label>
            @Html.TextBoxFor(model => model.DepRateTriple, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DepRateTriple, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
            <label>Description</label>
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">

        @if (Model.DEPID > 0)
        {
            <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Update</button>
        }
        else
        {
            <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
        }
    </div>

}
