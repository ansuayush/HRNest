
@{
	ViewBag.Title = "TravelDesk";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inner-main defult-height p-3 pb-0">
	<div class="row">
		<div class="col-sm-4 align-self-center">
			<h1 class="heading-one mb-0">Travel Desk</h1>
		</div>
		<div class="col-sm-8 text-right">
			@Html.Partial("ListHeader_Partial", "")
			<input type="hidden" id="hdnAddUrl" name="hdnAddUrl" value="@Url.Action("AddTravelDesk",new { src = clsApplicationSetting.EncryptFriendly(ViewBag.MenuID+"*"+"/Travel/AddTravelDesk*0") })" />
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12">
			<div class="table-responsive">
				<table class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" id="datatable-buttons">
					<thead>
						<tr>
							<th width="10">S.No</th>
							<th>Employee Name</th>
							<th>Travel Desk Location</th>
							<th width="150">Inserted Date</th>
							<th width="150">Updated Date</th>
							<th width="100">IP Address</th>
							<th width="70">Action</th>
						</tr>
					</thead>
					<tbody>
						@{
							string MenuID = "0";
							if (ViewBag.MenuID != null)
							{
								MenuID = ViewBag.MenuID;
							}
							int count = 0;
						}
						@foreach (var item in ViewBag.travellocations)
						{
							count++;
							<tr>
								<td>@count</td>
								<td>@item.EmpName</td>
								<td>@item.LoctionName</td>
								<td>@item.CreatedDate</td>
								<td>@item.ModifiedDate</td>
								<td>@item.IPAddress</td>
								<td>
									<input type="hidden" name="I" value="@item.EmployeeId" />
									<input type="hidden" name="N" value="@item.EmpName" />
									<a href="@Url.Action("AddTravelDesk",new { src = clsApplicationSetting.EncryptFriendly(ViewBag.MenuID+"*"+"/Travel/AddTravelDesk*"+item.EmployeeId+"") })"><i class="fas fa-edit"></i>Edit</a>
									@Html.Raw(item.IsActive == true
 ? "<a  data-toggle='tooltip' data-original-title='Click to DeActivate' list='TravelDeshk' OP='0' class='AIsActive' > <i class='fa fa-check-circle checkgreen' aria-hidden='true'></i></a>"
 : "<a data-toggle='tooltip' data-original-title='Click to Activate' list='TravelDeshk' OP='1'  class='AIsActive' > <i class='fa fa-times-circle crossred' aria-hidden='true'></i></a>")
								</td>
							</tr>

						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

@section scripts    {
	@System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
	@Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/AddInit.js"))
	@Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/ToolTip.js"))

}