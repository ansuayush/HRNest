@model IList<PMS.GroupGoalSheet.List>
<div class="tab-main">
	<ul class="nav nav-tabs" id="tabs" role="tablist">
		<li class="nav-item"> <a class="nav-link active" href="#tab1" role="tab" data-toggle="tab" aria-selected="true"><i class="far fa-clock"></i>Pending</a> </li>
		<li class="nav-item"> <a class="nav-link" href="#tab2" role="tab" data-toggle="tab" aria-selected="false"><i class="fas fa-share"></i>Resubmit</a> </li>
		<li class="nav-item"> <a class="nav-link" href="#tab3" role="tab" data-toggle="tab" aria-selected="false"><i class="fas fa-check"></i>Approved</a> </li>
	</ul>

	<!-- Tab panes -->
	<div class="tab-content">
		<div role="tabpanel" class="tab-pane in active" id="tab1">

			<div class="control-section">
				@Html.EJS().Grid("Grid").DataSource((List<PMS.GroupGoalSheet.List>)Model.Where(x => x.Approved ==1 ).ToList()).GridLines(Syncfusion.EJ2.Grids.GridLine.Both).Columns(col =>
           {
               col.Field("PMS_GSID").Visible(false).Add();
               col.Field("EMPCode").HeaderText("Employee Code").Width("80").Add();
               col.Field("EMPName").HeaderText("Employee Name").Width("200").Add();
               col.Field("LocationName").HeaderText("Location").Width("100").Add();
               col.Field("Department").HeaderText("Department").Width("100").Add();
               col.Field("DesignationName").HeaderText("Designation").Width("100").Add();
               col.Field("Status").HeaderText("Status").Width("60").Add();
               col.HeaderText("Action").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Template("#tmpAction").Width("40").Add();

           }).AllowPaging().PageSettings(page => page.PageSize(10)).Toolbar(new List<string>() { "Search" }).Render()

			</div>
		</div>
		<div role="tabpanel" class="tab-pane fade" id="tab2">

			<div class="control-section">
				@Html.EJS().Grid("Grid1").DataSource((List<PMS.GroupGoalSheet.List>)Model.Where(x=>x.Approved==3).ToList()).GridLines(Syncfusion.EJ2.Grids.GridLine.Both).Columns(col =>
           {
               col.Field("PMS_GSID").Visible(false).Add();
               col.Field("EMPCode").HeaderText("Employee Code").Width("80").Add();
               col.Field("EMPName").HeaderText("Employee Name").Width("200").Add();
               col.Field("LocationName").HeaderText("Location").Width("100").Add();
               col.Field("Department").HeaderText("Department").Width("100").Add();
               col.Field("DesignationName").HeaderText("Designation").Width("100").Add();
               col.Field("Status").HeaderText("Status").Width("60").Add();
               col.HeaderText("Action").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Template("#tmpAction").Width("40").Add();
           }).AllowPaging().PageSettings(page => page.PageSize(10)).Toolbar(new List<string>() { "Search" }).Render()

			</div>

		</div>

		<div role="tabpanel" class="tab-pane fade" id="tab3">

			<div class="control-section">
				@Html.EJS().Grid("Grid2").DataSource((List<PMS.GroupGoalSheet.List>)Model.Where(x=>x.Approved==4).ToList()).GridLines(Syncfusion.EJ2.Grids.GridLine.Both).Columns(col =>
           {
               col.Field("PMS_GSID").Visible(false).Add();
               col.Field("EMPCode").HeaderText("Employee Code").Width("80").Add();
               col.Field("EMPName").HeaderText("Employee Name").Width("200").Add();
               col.Field("LocationName").HeaderText("Location").Width("100").Add();
               col.Field("Department").HeaderText("Department").Width("100").Add();
               col.Field("DesignationName").HeaderText("Designation").Width("100").Add();
               col.Field("Status").HeaderText("Status").Width("60").Add();
               col.HeaderText("Action").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Template("#tmpAction").Width("40").Add();
           }).AllowPaging().PageSettings(page => page.PageSize(10)).Toolbar(new List<string>() { "Search" }).Render()

			</div>

		</div>
	</div>
</div>


<script id="tmpAction" type="text/x-template">
	<input type="hidden" name="I" value="${PMS_GSID}" />
	<input type="hidden" name="N" value="${EMPName}" />
	<a onclick="ViewGoalSheet(this)"><i class="fas fa-eye checkgreen" aria-hidden="true"></i> View </a>
</script>

@(Html.EJS().ScriptManager())