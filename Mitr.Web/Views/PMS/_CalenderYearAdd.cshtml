
@model PMS.CalenderYear.Add

@using (Ajax.BeginForm("_CalenderYearAdd", "PMS",
		new { src = ViewBag.src },
		new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnFYSuccess", OnBegin = "ShowLoadingDialog()"},
	new { @id = "_CalenderYearAddFrom" })
	)
{

	@Html.AntiForgeryToken()
	@Html.HiddenFor(x => Model.ID)

<div class="row">

	<div class="col-sm-8 form-group">
		<label>Year<sup>*</sup></label>
		@Html.TextBoxFor(model => model.year, new { @class = "form-control", @placeholder = "Name" })
		@Html.ValidationMessageFor(model => model.year, "", new { @class = "text-danger" })
	</div>

	<div class="col-sm-6 form-group">
		<label>Start Date<sup>*</sup></label>
		@Html.TextBoxFor(model => model.from_date, new { @class = "form-control",@type="date"})
		@Html.ValidationMessageFor(model => model.from_date, "", new { @class = "text-danger" })
	</div>

	<div class="col-sm-6 form-group">
		<label>End Date<sup>*</sup></label>
		@Html.TextBoxFor(model => model.to_date, new { @class = "form-control", @type = "date" })
		@Html.ValidationMessageFor(model => model.to_date, "", new { @class = "text-danger" })
	</div>

	@*<div class="col-sm-12 divauto form-group" >
		<input type="checkbox" id="ckAdvanceRequired" name="@Html.NameFor(x=>x.CopyNextYear)" >
		<label for="ckAdvanceRequired"> Copy PMS's Masters in next year <i class="fas fa-info-circle" data-toggle="tooltip" data-original-title="Text"></i> </label>
	</div>*@


	<div class="col-lg-12 text-center">
		<button type="button" data-dismiss="modal" class="btn cnl-btn mb-0 ripplelink  pull-right"><i class="fas fa-times"></i> Close</button>

		@if (Model.ID > 0)
		{
			<button type="submit" class="btn  mtr-g-grn mb-0 btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Update</button>
		}
		else
		{

			<button type="submit" class="btn  mtr-o-grn mb-0 btn-l ripplelink pull-right" name="Command" value="Add"><i class="fas fa-save" aria-hidden="true"></i> Save</button>
		}
	</div>
</div>

}