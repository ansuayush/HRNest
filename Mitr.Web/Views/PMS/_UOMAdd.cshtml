
@model PMS.UOM.Add

@using (Ajax.BeginForm("_UOMAdd", "PMS",
		new { src = ViewBag.src },
		new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnPMSSuccess", OnBegin = "ShowLoadingDialog()" },
	new { @id = "_UOMAddFrom" })
	)
{

	@Html.AntiForgeryToken()
	@Html.HiddenFor(x => Model.PMSUOMID)

<div class="row">

	<div class="col-sm-8 form-group">
		<label>UOM<sup>*</sup></label>
		@Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder="Enter Name" })
		@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
	</div>
	<div class="col-sm-4 form-group">
		<label >Type<sup>*</sup></label>
		@{
            List<SelectListItem> DropDownList = new List<SelectListItem>
{
    new SelectListItem{Text="Number",Value="Number" },
    new SelectListItem{Text="Text",Value="Text" },
    new SelectListItem{Text="Percentage",Value="Percentage" }
    };
		}
		@Html.DropDownListFor(model => model.Type, new SelectList(DropDownList, "Value", "text", Model.Type), "Select", new { @class = "form-control applyselect",@onchange="TypeChange(this)" })
		@Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
	</div>

	<div class="col-sm-12 divauto form-group" style="@(Model.Type=="Text"?"display:none;":"")">
		<input type="checkbox" id="ckAdvanceRequired" name="@Html.NameFor(x=>x.ChkAutoRating)" @(Model.AutoRating=="Yes"?"checked":"")>
		<label for="ckAdvanceRequired" >Auto calculate rating <i class="fas fa-info-circle" data-toggle="tooltip" title="System can suggest rating against KPA" ></i> </label>
	</div>

	<div class="col-lg-12 form-group">
		<label>Priority</label>
		@Html.TextBoxFor(model => model.Priority, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
	</div>


<div class="col-lg-12 text-center">
<button type="button" data-dismiss="modal" class="btn cnl-btn mb-0 ripplelink  pull-right"><i class="fas fa-times"></i> Close</button>
	
		@if (Model.PMSUOMID > 0)
		{
			<button type="submit" class="btn  mtr-g-grn mb-0 btn-l ripplelink pull-right" name="Command" value="Add"><i class="fas fa-edit" aria-hidden="true"></i>Update</button>
		}
		else
		{

			<button type="submit" class="btn  mtr-o-grn mb-0 btn-l ripplelink pull-right" name="Command" value="Add"><i class="fas fa-save" aria-hidden="true"></i> Save</button>
		}
	</div>
</div>

<script>
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip();
});
</script>

}