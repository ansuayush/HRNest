@model IList<Mitr.Models.SalaryStructure.EarningStructureList>
@{ 
    List<SalaryStructure.EarningStructureList> lstLegacy = new List<SalaryStructure.EarningStructureList>();
    lstLegacy = ViewBag.Legacy;    
   
 }
@using (Ajax.BeginForm("_EarningStructureAdd", "SalaryStructure",
    new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID + "*" + "/SalaryStructure/_EarningStructureAdd*" + ViewBag.Category) },
     new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnBegin = "ShowLoadingDialog()" },
        new { @id = "_EarningStructureAddForm" })
)
{
    <div class="row">
        <div class="col-sm-4 form-group">
            <label>Category</label>
            <input type="text" disabled class="form-control" value="@ViewBag.Category" />
        </div>
        <div class="col-sm-12 form-group ">
            <div class="tab-main  mb-3">
                <ul id="tabs" class="nav nav-tabs " role="tablist">
                    <li class="nav-item "> <a id="tab-C" href="#parta" class="nav-link active ripplelink" data-toggle="tab" role="tab" aria-selected="false">Live</a> </li>
                    <li class="nav-item"> <a id="tab-d" href="#partb" class="nav-link ripplelink " data-toggle="tab" role="tab" aria-selected="true">Legacy</a> </li>
                </ul>
                <div id="content" class="tab-content mt-3 p-0" role="tablist">
                    <div id="parta" class="card tab-pane fade show active" role="tabpanel" aria-labelledby="tab-C">
                        <div class="card-header" role="tab" id="heading-C">
                            <h5 class="mb-0"> <a data-toggle="collapse" href="#collapse-C" aria-expanded="true" aria-controls="collapse-C">Part A <i class="far fa-clock"></i></a> </h5>
                        </div>
                        <div id="collapse-C" class="collapse  show" data-parent="#content" role="tabpanel" aria-labelledby="heading-C">
                            <div class="table-responsive">
                                <table class="table mt-0 tbl-600">
                                    <thead>
                                        <tr>
                                            <th class="w-33">S.No </th>
                                            <th>Component </th>
                                            <th class="w-80">%</th>
                                            <th class="tw-100">Start Month </th>
                                            <th class="tw-100">End Month</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       
                                        @for (int i = 0; i < Model.Count; i++)
                                        {  
                                        <tr>
                                            <td>
                                                @(i+1)
                                                @Html.HiddenFor(x => Model[i].Category)
                                                @Html.HiddenFor(x => Model[i].id)
                                                @Html.HiddenFor(x => Model[i].Componentid)
                                                @Html.HiddenFor(x => Model[i].Component)
                                            </td>
                                            <td>@Model[i].Component</td>
                                            <td>
                                                <div class="input-group">
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(model => model[i].Percentage, new { @class = "form-control text-center", @placeholder = "0", @Type = "Number", @OnChange = "FnCheckPercentage(this,'" + i + "')" })
                                                        @Html.ValidationMessageFor(model => model[i].Percentage, "", new { @class = "text-danger" })
                                                        <div class="input-group-append"> <span class="input-group-text" id="basic-addon2">%</span> </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @Html.TextBoxFor(model => model[i].StartMonth, new { @class = "form-control", @placeholder = "Enter", @Type = "Month" })
                                                @Html.ValidationMessageFor(model => model[i].StartMonth, "", new { @class = "text-danger StartMonth" })
                                            </td>
                                            <td>
                                                @Html.TextBoxFor(model => model[i].EndMonth, new { @class = "form-control EndMonth", @placeholder = "Enter", @Type = "Month" })
                                                @Html.ValidationMessageFor(model => model[i].EndMonth, "", new { @class = "text-danger" })
                                            </td>

                                        </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                    <div id="partb" class="card tab-pane fade " role="tabpanel" aria-labelledby="tab-D">
                        <div class="card-header" role="tab" id="heading-D">
                            <h5 class="mb-0"> <a class="collapsed" data-toggle="collapse" href="#collapse-D" aria-expanded="false" aria-controls="collapse-D">Processed <i class="fas fa-database"></i></a> </h5>
                        </div>
                        <div id="collapse-D" class="collapse" data-parent="#content" role="tabpanel" aria-labelledby="heading-B">

                            <div class="table-responsive">
                                <table class="table mt-0 tbl-600">
                                    <thead>
                                        <tr>
                                            <th class="w-33">S.No </th>
                                            <th>Component </th>
                                            <th class="w-80">%</th>
                                            <th class="tw-100">Start Month </th>
                                            <th class="tw-100">End Month</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int Count = 0;}
                                        @foreach (var item in lstLegacy)
                                        {
                                            <tr>
                                                <td>@(Count+1)</td>
                                                <td>@item.Component</td>
                                                <td>
                                                    <div class="input-group">
                                                        <div class="input-group">
                                                            <input type="number" value="@item.Percentage" class="form-control text-center" disabled="" placeholder="0">
                                                            <div class="input-group-append"> <span class="input-group-text" id="basic-addon2">%</span> </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="month"  class="form-control" value="@item.StartMonth" disabled="" placeholder="Enter">
                                                </td>
                                                <td>
                                                    <input type="month"  disabled=""  value="@item.EndMonth" class="form-control" placeholder="Enter">
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="p-0 m-2 text-center ">
    <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
        <button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal"><i class="fas fa-times"></i>Close</button>
        
    </div>
}


