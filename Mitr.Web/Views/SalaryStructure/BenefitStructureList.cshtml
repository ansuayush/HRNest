@model IList<Mitr.Models.SalaryStructure.BenefitStructureList>
@section style{
    @System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")
}
<div class="inner-main mb-5 pb-0">
    @Html.Partial("ListHeader_Partial", "Structure Master")
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card p-0">
                <div class="card-body p-0">
                    <div class="x_content table-currency mt-0">
                        <div class="table-responsive">
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th width="10">S.no.</th>
                                        <th>Category</th>
                                        <th>Structure Name</th>
                                        <th>Action</th>
                                    </tr>
                                    <tr class="searchbar">
                                        <th class="searchhide"></th>
                                        <th></th>
                                        <th></th>
                                        <th class="searchhide"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int Count = 0;}
                                    @foreach (Mitr.Models.SalaryStructure.BenefitStructureList item in Model)
                                    {
                                        Count++;
                                        <tr>
                                            <td>@Count</td>
                                            <td> @item.Category</td>
                                            <td>@item.Structure</td>
                                            <td>
                                                <input type="hidden" name="I" class="I" value="@item.id" />
                                                <input type="hidden" name="N" class="N" value="@item.Structure" />
                                                @if (clsApplicationSetting.GetSessionValue("Modify") == "True")
                                                {
                                                    <a title="Edit" onclick="ListHeaderAdd(@item.id);" data-toggle='tooltip'><i class="fas fa-edit checkgreen" aria-hidden="true"></i> </a>
                                                }
                                                @if (clsApplicationSetting.GetSessionValue("Delete") == "True")
                                                {
                                                    <a onclick="DeleteRow(this)" class="remove"><i class="fas fa-window-close red-clr" aria-hidden="true"></i></a>
                                                }

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<div class="modal fade pop-dgn" id="ViewModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title"><i class="fa fa-plus"></i>Add Structure </h4>
                <div class="close" data-dismiss="modal">&times;</div>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div id="TagetDiv"></div>
            </div>
        </div>
    </div>
</div>


@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")

    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")

    @Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/AddInit.js"))
    @Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/ToolTip.js"))
    <script>



    function ListHeaderAdd(CMSID) {
        if (CMSID == undefined)
        {
            CMSID = 0;
        }
			$.ajax({
                url: "/SalaryStructure/_BenefitStructureAdd",
				type: "Get",
                data: { src: EncryptQueryStringJSON(@ViewBag.MenuID+"*" + "/SalaryStructure/_BenefitStructureAdd" + "*" + CMSID) },
                success: function (data)
                {
					$("#TagetDiv").empty();
                    $("#TagetDiv").html(data);
                    $("#ViewModal").modal("show");
                     var form = $("form")
                .removeData("validator")
                .removeData("unobtrusiveValidation");
                    $.validator.unobtrusive.parse(form);
                    $("#Category").select2();
                    $(".applyselect").select2();
                    
				},
				error: function (er) {
					alert(er);

				}
			});
            }
        function DeleteRow(obj)
        {
            var ID = $(obj).closest('tr').find('.I').val();
            ConfirmMsgBox("Are you sure want to delete", '', function () {
                if (ID) {
                    var data = DelRecord_Common(ID, 'SS_BenefitStructure');
                    if (data.Status) {
                        $(obj).closest('tr').remove();
                    }
                    else {
                        FailToaster(data.SuccessMessage);
                    }
                }
            })
        }
        function OnSuccess(obj) {
            if (obj.Status) {
                SuccessToaster(obj.SuccessMessage);
                if (obj.OtherID == "1") {
                    CloseLoadingDialog();
                    ListHeaderAdd('0');
                }
                else {
                    window.location.reload();
                }
                
            }
            else {
                CloseLoadingDialog();
                FailToaster(obj.SuccessMessage);

            }
        }
       
    </script>
   
}

