
@model Mitr.Models.Helpdesk.TicketNotes

@using (Ajax.BeginForm("_AddTicketNotes", "Ticket",
        new { src = ViewBag.src },
        new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnNotesSuccess" },
    new { @id = "_AddTicketNotesFrom" })
    )
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => Model.TicketNotesID)
    <div class="row">

        <div class="col-lg-6 col-md-6 col-sm-6 form-group">
            <label>Status<sup>*</sup></label>
            @Html.DropDownListFor(model => model.StatusID, new SelectList(ViewBag.TicketStatus, "TicketStatusID", "DisplayName", Model.StatusID), "select", new { @class = "form-control applyselect" })
            @Html.ValidationMessageFor(model => model.StatusID, "", new { @class = "text-danger" })

        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group Forward" style="@(Model.StatusID==4?"":"display:none")">
            <label>Forward To</label>
            @Html.DropDownListFor(model => model.ForwardTo, new SelectList(ViewBag.EmployeeList, "LoginID", "EMPName", Model.ForwardTo), "select", new { @class = "form-control applyselect" })
            @Html.ValidationMessageFor(model => model.ForwardTo, "", new { @class = "text-danger" })

        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 form-group nextDate">
            <label>Next Date</label>
            @Html.TextBoxFor(model => model.NextDate, new { @class = "form-control", @type = "datetime-local" })
            @Html.ValidationMessageFor(model => model.NextDate, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
            <label>Remarks<sup>*</sup></label>
            @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">

        @if (Model.TicketNotesID > 0)
        {
            <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Update</button>
        }
        else
        {
            <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
        }
    </div>

}
