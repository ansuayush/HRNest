
@model IList<Mitr.Models.Helpdesk.SubCategory>


@section style{
    @System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")
}
<div class="inner-main mb-5 pb-0">
    @Html.Partial("ListHeader_Partial", "Sub Category List")

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card p-0">
                <div class="card-body p-0">
                    <div class="x_content table-currency mt-0">
                        <div class="table-responsive">
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>S.no.</th>
                                        <th>Action</th>
                                        <th>Priority</th>
                                        <th>Category Name</th>
                                        <th>Sub Category	</th>
                                        <th>Related To	</th>
                                        <th>Description</th>
                                        <th>Inserted Date</th>
                                        <th>Updated Date</th>
                                        <th>IP Address</th>
                                    </tr>
                                    <tr class="searchbar">
                                        <th class="searchhide"></th>
                                        <th class="searchhide"></th>
                                        <th class="searchhide"></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th> </th>
                                        <th> </th>
                                        <th> </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int Count = 0;}
                                    @foreach (Mitr.Models.Helpdesk.SubCategory item in Model)
                                    {
                                        Count++;
                                    <tr class="@(item.IsActive == true?"": "trrowred")">
                                        <td>@Count</td>
                                        <td>
                                            <input type="hidden" name="STI" value="@item.SubCategoryID" />
                                            <input type="hidden" name="STIName" id="hdn_@item.SubCategoryID" value="@item.Name" />
                                            @if (clsApplicationSetting.GetSessionValue("Modify") == "True")
                                            {
                                                @Html.Raw(item.IsActive == true ? "<a id='AIsActive_" + @item.SubCategoryID + "' title='Click to  DeActivate' onclick='UpdateIsActiveJSON(\"SubCategoryList\"," + item.SubCategoryID + ",0);' data-toggle='tooltip'> <i class='fa fa-check-circle checkgreen' aria-hidden='true'></i></a>" +
    "  " : "<a id='AIsActive_" + @item.SubCategoryID + "' title='Click to  Activate' onclick='UpdateIsActiveJSON(\"SubCategoryList\"," + item.SubCategoryID + ",1);' data-toggle='tooltip'><i class='fa fa-times-circle crossred' aria-hidden='true'></i></a>")
                                                <a title="Edit" onclick="ListHeaderAdd(@item.SubCategoryID);" data-toggle='tooltip'><i class="fas fa-edit checkgreen" aria-hidden="true"></i> </a>
                                            }
                                        </td>
                                        <td>

                                            @Html.Raw(clsApplicationSetting.GetSessionValue("Modify") == "True" ? "<input type='number' id=\"txtPriority_" + @item.SubCategoryID + "\" onfocus=\"if(this.value == '0') { this.value=''}\" onblur=\"if(this.value==''){this.value='0'} else{UpdatePriority(this," + @item.SubCategoryID + ",'SubCategoryList');}\" value=\"" + @item.Priority + "\" />" : @item.Priority.ToString())
                                        </td>

                                        <td> @item.CategoryName</td>
                                        <td><a class="viewSetting"> @item.Name</a></td>
                                        <td>@item.RelatedTo</td>
                                        <td>@item.Description</td>
                                        <td>@item.createdat</td>
                                        <td>@item.modifiedat</td>
                                        <td>@item.IPAddress</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<div class="modal fade pop-dgn" id="ViewModal">
    <div class="modal-dialog modal-md">
        <div class="modal-content">

            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title"><i class="fas fa-print"></i>Add Sub Category </h4>
                <div class="close" data-dismiss="modal">&times;</div>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div id="TagetDiv"></div>
            </div>
        </div>
    </div>
</div>

<div id="ModalTicketSetting" class="modal fade" role="dialog">
    <div class="modal-dialog modal-xl modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><i class="fa fa-plus" aria-hidden="true"></i>Ticket Setting  ( <span class="spnhead"></span> )</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body ">
                <div id="DivTicketSetting"></div>
            </div>
        </div>
    </div>
</div>



@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
    <script src="~/assets/design/Scripts/AddInit.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
    <script>



    function ListHeaderAdd(CMSID) {
        if (CMSID == undefined)
        {
            CMSID = 0;
        }
			$.ajax({
                url: "/Ticket/_SubCategoryAdd",
				type: "Get",
				data: { src: EncryptQueryStringJSON(@ViewBag.MenuID+"*" + "/Ticket/_SubCategoryAdd" + "*" + CMSID) },
                success: function (data)
                {
					$("#TagetDiv").empty();
                    $("#TagetDiv").html(data);
                    $("#ViewModal").modal("show");
				},
				error: function (er) {
					alert(er);

				}
			});
            }

    function OnSuccess(obj)
    {
        if (obj.Status) {
            window.location.reload();
        }
        else {
            FailToaster("Can't Update There is some problem");
        }

            }

     $('.viewSetting').on('click', function (e) {
           ShowLoadingDialog();
                e.preventDefault();
         e.stopPropagation();
         var STI = $(this).closest("tr").find("input:hidden[name=STI]").val();
           var STIName = $(this).closest("tr").find("input:hidden[name=STIName]").val();
            ViewTicketSetting(STI,STIName);



     });

     function ViewTicketSetting(STI,STIName) {
          var ID = Number(STI);
			$.ajax({
                url: "/Ticket/_TicketSettingPopUp",
				type: "Get",
				data: { src: EncryptQueryStringJSON(@ViewBag.MenuID+"*" + "/Ticket/_TicketSettingPopUp" + "*" + ID) },
                success: function (data)
                {
					$("#DivTicketSetting").empty();
                    $("#DivTicketSetting").html(data);
                    $(".spnhead").html(STIName);
                       $("#ModalTicketSetting").modal("show");
                    CloseLoadingDialog();
                     var form = $("form")
                .removeData("validator")
                .removeData("unobtrusiveValidation");
                    $.validator.unobtrusive.parse(form);

				},
				error: function (er) {
                    FailToaster(er);
                      CloseLoadingDialog();
				}
			});
        }


      function OnTicketAssignmentSuccess(obj)
    {
          if (obj.Status) {
              $("#DivTargetAssignList").empty();
              $("#DivTargetAssignList").html(obj.ViewAsString);
              SuccessToaster(obj.SuccessMessage);
          }
          else {
               FailToaster(obj.SuccessMessage);
          }
            }

     function OnSLASuccess(obj)
    {
        if (obj.Status) {
              SuccessToaster(obj.SuccessMessage);
          }
          else {
               FailToaster(obj.SuccessMessage);
          }
            }

    </script>
}

