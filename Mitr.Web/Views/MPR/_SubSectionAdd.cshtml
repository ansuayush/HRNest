
@model MPR.SubSection.SubSecAdd


@using (Ajax.BeginForm("_SubSectionAdd", "MPR",
        new { src = ViewBag.src },
        new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnMPRSubSECSuccess" },
    new { @id = "_SubSectionAddFrom" })
    )
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => Model.MPRSubSID)

<div class="row">

    <div class="col-lg-9 form-group">
        <label>Name<sup>*</sup></label>
        @Html.TextBoxFor(model => model.SubSecName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SubSecName, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-3 form-group">
        <label>Priority<sup>*</sup></label>
        @Html.TextBoxFor(model => model.Priority, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-9 form-group">
        <label>Section<sup>*</sup></label>
        @Html.DropDownListFor(x => Model.MPRSID, new SelectList(ViewBag.MPRSecList, "MPRSID", "SecName", Model.MPRSID), "Select Section",
new { @class = "form-control  applyselect" })
        @Html.ValidationMessageFor(model => Model.MPRSID, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-3 form-group">
        <label>No of Column<sup>*</sup></label>
        @{
            List<SelectListItem> ColumnLis = new List<SelectListItem>
{
new SelectListItem{Text="1",Value="1" },
new SelectListItem{Text="2",Value="2" },
new SelectListItem{Text="3",Value="3" }
};
        }
        @Html.DropDownListFor(model => model.NoOfCol, new SelectList(ColumnLis, "Value", "text", Model.NoOfCol), new { @class = "form-control applyselect", @onChange = "ShowHideCol(this)" })
        @Html.ValidationMessageFor(model => model.NoOfCol, "", new { @class = "text-danger" })

    </div>
    <div class="col-lg-12" id="maplist">
        <label>Column Details <sup>*</sup></label>
        <table class="table mt-0">
            <tbody>
                <tr class="Col1">
                    <td colspan="3" style="border:0px"><strong class="lgt-clr">1 Column</strong></td>
                </tr>
                <tr class="Col1">
                    <td><strong>Column 1</strong></td>
                    <td class="form-group">
                        @Html.TextBoxFor(model => model.ColText1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ColText1, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @{
                            List<SelectListItem> ColDataType1Lis = new List<SelectListItem>
                                {
                                new SelectListItem{Text="Number",Value="Number" },
                                new SelectListItem{Text="Text",Value="Text" },
                                new SelectListItem{Text="Sum",Value="Sum" }
                                };
                        }
                        @Html.DropDownListFor(model => model.ColDataType1, new SelectList(ColDataType1Lis, "Value", "text", Model.ColDataType1), new { @class = "form-control applyselect" })
                        @Html.ValidationMessageFor(model => model.ColDataType1, "", new { @class = "text-danger" })

                    </td>
                    <td>
                        <input type="checkbox" id="@Html.IdFor(x=>x.ColSuffix1)" name="@Html.NameFor(x=>x.ColSuffix1)" value="Yes">
                        <label for="@Html.IdFor(x=>x.ColSuffix1)"> Add % suffix</label>
                    </td>
                </tr>


                <tr class="Col2" style="display:none">
                    <td colspan="3" style="border:0px"><strong class="lgt-clr">2 Column</strong></td>
                </tr>
                <tr class="Col2" style="display:none">
                    <td><strong>Column 2</strong></td>
                    <td class="form-group">
                        @Html.TextBoxFor(model => model.ColText2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ColText2, "", new { @class = "text-danger" })
                    </td>
                    <td>

                        @Html.DropDownListFor(model => model.ColDataType2, new SelectList(ColDataType1Lis, "Value", "text", Model.ColDataType2), new { @class = "form-control applyselect" })
                        @Html.ValidationMessageFor(model => model.ColDataType2, "", new { @class = "text-danger" })

                    </td>
                    <td>
                        <input type="checkbox" id="@Html.IdFor(x=>x.ColSuffix2)" name="@Html.NameFor(x=>x.ColSuffix2)">
                        <label for="@Html.IdFor(x=>x.ColSuffix2)"> Add % suffix</label>
                    </td>
                </tr>


                <tr class="Col3" style="display:none">
                    <td colspan="3" style="border:0px"><strong class="lgt-clr">3 Column</strong></td>
                </tr>
                <tr class="Col3" style="display:none">
                    <td><strong>Column 3</strong></td>
                    <td class="form-group">
                        @Html.TextBoxFor(model => model.ColText3, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ColText3, "", new { @class = "text-danger" })
                    </td>
                    <td>

                        @Html.DropDownListFor(model => model.ColDataType3, new SelectList(ColDataType1Lis, "Value", "text", Model.ColDataType3), new { @class = "form-control applyselect" })
                        @Html.ValidationMessageFor(model => model.ColDataType3, "", new { @class = "text-danger" })

                    </td>
                    <td>
                        <input type="checkbox" id="@Html.IdFor(x=>x.ColSuffix3)" name="@Html.NameFor(x=>x.ColSuffix3)">
                        <label for="@Html.IdFor(x=>x.ColSuffix3)"> Add % suffix</label>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>

<div class="row">

    @if (Model.MPRSubSID > 0)
    {
        <button type="submit" class="btn  mtr-g-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Update</button>
    }
    else
    {

        <button type="submit" class="btn  mtr-o-grn" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
    }
    <button type="button" class="btn cnl-btn" id="btnClr"><i class="fas fa-times"></i> Clear</button>
</div>


}