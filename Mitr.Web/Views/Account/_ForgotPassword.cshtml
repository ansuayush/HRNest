@model ForgotPassword.Request

@using (Ajax.BeginForm("_SubmitForgotPassword", "Account",
        new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess" },
    new { @id = "_ForgotPasswordFrom", @class = "login-form" })
    )
{
<div class="row">
    <div class="col-lg-12 form-group">
        <label>User ID<sup>*</sup></label>
        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder="Enter" })
        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
    </div>
    <div class="form-label-group col-sm-12">
        <div class="lgn-err" id="ForgotError" style="display:none;">  </div>
    </div>
    <div class="col-lg-12 text-center">
        <button type="submit" class="btn  mtr-o-grn " name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
    </div>

    
</div>
}
