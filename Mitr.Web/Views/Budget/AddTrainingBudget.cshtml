		function AddTraining() {
				var empid = "1";
			$.ajax({
				url: "/Budget/_AddTraining",
				type: "Get",
				async: true,
				data: { src: EncryptQueryStringJSON(@ViewBag.MenuID+"*" + "/Budget/_AddTraining" + "*" + empid) },
				success: function (data) {
					$("#TagetDivAddTraining").empty();
					$("#TagetDivAddTraining").html(data);


