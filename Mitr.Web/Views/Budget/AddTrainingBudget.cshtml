					alert(er);

				}
			});
	}

		function AddNewTraining() {
				var empid = "1";
			$.ajax({
				url: "/Budget/_AddNewTraining",
				type: "Get",
				async: true,
				data: { src: EncryptQueryStringJSON(@ViewBag.MenuID+"*" + "/Budget/_AddNewTraining" + "*" + empid) },
				success: function (data) {
					$("#TagetDivAddNewTraining").empty();
					$("#TagetDivAddNewTraining").html(data);


				},
				error: function (er) {
					alert(er);

				}
			});
	}

		function OnSuccess(obj) {
			if (obj.Status) {
				SuccessToaster(obj.SuccessMessage);
				window.location.href = obj.RedirectURL

			}
			else {
				CloseLoadingDialog();
				FailToaster(obj.SuccessMessage);

			}
		}
	</script>

