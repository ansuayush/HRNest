@model Mitr.Models.BudgetMaster.BudgetAuthoritySetting
@{
    ViewBag.Title = "AddBudgetAuthoritySetting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Ajax.BeginForm("AddBudgetAuthoritySetting", "Budget",
	 new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/Budget/AddBudgetAuthoritySetting") },
	new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnPostFailure()" },
	new { @id = "AddBudgetAuthoritySetting" }))
{
	if (Model.FinancePerson > 0)
	{
        @Html.HiddenFor(model => model.FinancePerson, new { @id = "hdfFinancePerson" })
        @Html.HiddenFor(model => model.Id)
    }

    <div class="inner-main mb-5">
        <div class="row">
            <div class="col-sm-4">
                <h1 class="heading-one mb-3">Budget-Authority Setting</h1>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-3 form-group">
                <label>Finance person for budget approval</label>
                @Html.DropDownListFor(model => model.FinancePerson, new SelectList(@ViewBag.EmpList, "Id", "Name"), "select", new { @class = "form-control applyselect", @id = "ddlemp" })
                @Html.ValidationMessageFor(model => model.FinancePerson, "", new { @class = "text-danger" })
            </div>


        </div>
        <div class="mt-3 text-left">
            <button type="submit" class="btn mtr-o-grn " name="Command" value="Add"><i class="fas fa-save"></i>Save</button>
            <button type="button" class="btn cnl-btn" onclick="ShowLoadingDialog();window.location='@Url.Action("BudgetAuthoritySetting", new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/Budget/BudgetAuthoritySetting*0")  })';"><i class="fas fa-times"></i> Close</button>
        </div>
    </div>
    <!---->


}
@section scripts    {
    @*@Html.IncludeVersionedJs(Url.Content("~/assets/design/js/jquery-3.4.1.min.js"))*@
    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
    @Html.IncludeVersionedJs(Url.Content("~/assets/design/scripts/AddInit.js"))
    @Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/SyncScripts.js"))

        <script type="text/javascript">
            $(document).ready(function () {
                $(".applyselect").select2();
            });
            $("#ddlemp").change(function () {

                var emp = $("#ddlemp").val();
                if (emp == "") {
                $("#hdfFinancePerson").val(null);
                }
                $("#hdfFinancePerson").val(emp);
            });
            function OnSuccess(obj) {
                if (obj.Status) {
                SuccessToaster(obj.SuccessMessage);
                    window.location.href = obj.RedirectURL

                }
                else {
                CloseLoadingDialog();
                    FailToaster(obj.SuccessMessage);

                }
            }
    </script>
}