@model IList<Employee.List>
@section style{
	@System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")
}
<div id="completed" class="card tab-pane active show fade" role="tabpanel" aria-labelledby="tab-A">
	<div class="card-header" role="tab" id="heading-A">
		<h5 class="mb-0">
			<!-- Note: `data-parent` removed from here -->
			<a data-toggle="collapse" href="#collapse-A" aria-expanded="true" aria-controls="collapse-A">Processed <i class="fas fa-clock"></i></a>
		</h5>
	</div>

	<!-- Note: New place of `data-parent` -->
	<div id="collapse-A" class="collapse show" data-parent="#content" role="tabpanel" aria-labelledby="heading-A">
		<div class="card-body p-0">
			<!-- Start -->

			<div class="table-responsive">
				<table class="table mt-0">
					<thead>
						<tr>
							<th width="33">S.No</th>
							<th width="100">REC.No</th>
							<th width="100">Employee Code</th>
							<th>Employee Name </th>
							<th width="80">Category</th>
							<th width="200">Job Title</th>
							<th width="100">Department</th>
							<th width="100">Location</th>
							<th width="100">Date of Joining</th>
							<th width="80">Req Date</th>
							<th width="80">Status</th>
							<th width="60">Action</th>
						</tr>
					</thead>
					<tbody>
						@{ int count = 0;}
						@if (Model != null)
						{
							foreach (var item in Model.Where(x=>x.Status== "Approved" || x.Status == "Rejected").ToList())
							{
								count++;
						<tr>
							<td class="hdfempid">@count<input type="hidden" value="@item.ID" id="hdfEmp" /></td>
							<td>@item.REC_Code</td>
							<td class="hdfempcode">@item.emp_code<input type="hidden" value="@item.emp_code" id="hdfempcode" /></td>
							<td class="hdfempname">@item.emp_name	<input type="hidden" value="@item.emp_name" id="hdfempname" /></td>
							<td class="hdfMUID">@item.emp_type <input type="hidden" value="@item.MUID" id="hdfMUID" /></td>
							<td class="hdfdoctype">@item.JobTitle<input type="hidden" value="@item.DocType" id="hdfdoctype" /></td>
							<td>@item.Department</td>
							<td>@item.Location</td>
							<td>@item.DateOfJoining</td>
							<td>@item.createdat</td>
							<td class="green-clr">@item.Status</td>

							<td class="text-left"><a href="" onclick="ModalDisplay(this);" data-toggle="modal" data-target="#ae"><i class="fas fa-eye"></i>View</a></td>
						</tr>
							}
						}

					</tbody>
				</table>
			</div>
		</div>
		<!-- End -->
	</div>
</div>
@section scripts    {
	@System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")

	@System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
	@Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/AddInit.js"))
	@Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/ToolTip.js"))

}