

@{
    ViewBag.Title = "levelApproval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="inner-main">
    <div class="right_col" role="main">
        <input type="hidden" value="@ViewBag.EMPID" id="hdfEMPID" />
        <div class="inner-main defult-height p-3 pb-0">
            <h1 class="heading-one mb-3">My Team's Resignation Request </h1>
            <!-- tab--->
            <ul class="tab-thrid">
                <li class="active"><a onClick=" openlevel(1);">Level 1</a></li>
                <li class="dnactive"><a onClick="openlevel(2);">Level 2</a></li>
                <li class="dnactive"><a onClick="openlevel(3);">Level 3</a></li>
                <li class="dnactive"><a onClick="openlevel(4);">Level 4</a></li>
                <li class="dnactive"><a onClick="openlevel(5);">Level 5</a></li>
            </ul>
            <div class="tab-main mb-3">
                <ul id="tabs" class="nav nav-tabs " role="tablist">
                    <li class="nav-item"> <a id="tab-A" href="#pending" class="nav-link active ripplelink" data-toggle="tab" role="tab"><i class="fas fa-clock"></i>Pending </a> </li>
                    <li class="nav-item"> <a id="tab-B" href="#approved" class="nav-link ripplelink" data-toggle="tab" role="tab"><i class="fas fa-check"></i>Approved</a> </li>

                    <li class="nav-item"> <a id="tab-C" href="#resolutionrecorded" class="nav-link ripplelink" data-toggle="tab" role="tab"><i class="fas fa-file-alt"></i>Resolution Recorded</a> </li>

                </ul>
                <div id="content" class="tab-content shadow-box p-0" role="tablist">
                    <div id="pending" class="card tab-pane fade show active" role="tabpanel" aria-labelledby="tab-A">
                        <div class="card-header" role="tab" id="heading-A">
                            <h5 class="mb-0">
                                <!-- Note: `data-parent` removed from here -->
                                <a data-toggle="collapse" href="#collapse-A" aria-expanded="true" aria-controls="collapse-A">Pending <i class="fas fa-clock"></i></a>
                            </h5>
                        </div>

                        <!-- Note: New place of `data-parent` -->
                        <div id="collapse-A" class="collapse show" data-parent="#content" role="tabpanel" aria-labelledby="heading-A">
                            <div class="card-body p-0">
                                <!-- Start -->
                                <div class="table-responsive">
                                    <table id="tablePending" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                        <thead>
                                            <tr>
                                                <th width="33">S.No</th>
                                                <th width="100">Employee Code</th>
                                                <th>Employee Name</th>
                                                <th width="100">Location</th>
                                                <th width="100">Department</th>
                                                <th width="100">Designation</th>
                                                <th width="100">Request Date</th>
                                                <th width="100">Relieving date </th>
                                                <th class="w-50">Days left  </th>

                                                <th width="80">Action</th>

                                            </tr>

                                            <tr class="searchbar" role="row">
                                                <th class="searchhide"></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th class="searchhide"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- End -->
                            </div>
                        </div>
                    </div>
                    <div id="approved" class="card tab-pane fade" role="tabpanel" aria-labelledby="tab-B">
                        <div class="card-header" role="tab" id="heading-B">
                            <h5 class="mb-0"> <a class="collapsed" data-toggle="collapse" href="#collapse-B" aria-expanded="false" aria-controls="collapse-B">Approved <i class="fas fa-check"></i></a> </h5>
                        </div>
                        <div id="collapse-B" class="collapse" data-parent="#content" role="tabpanel" aria-labelledby="heading-B">
                            <!-- Start -->
                            <div class="table-responsive">
                                <div class="table-responsive">
                                    <table id="tableapproved" class="table mt-0  table-bordered dt-responsive nowrap tbltick new_width">
                                        <thead>
                                            <tr>
                                                <th width="33">S.No</th>
                                                <th width="100">Employee Code</th>
                                                <th>Employee Name</th>
                                                <th width="100">Location</th>
                                                <th width="100">Department</th>
                                                <th width="100">Designation</th>
                                                <th width="100">Request Date</th>
                                                <th width="100">Relieving date</th>
                                                <th class="w-50">Days left  </th>

                                                <th width="80">Action</th>

                                            </tr>

                                            <tr class="searchbar" role="row">
                                                <th class="searchhide"></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th class="searchhide"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- End -->
                        </div>
                    </div>


                    <div id="resolutionrecorded" class="card tab-pane fade" role="tabpanel" aria-labelledby="tab-d">
                        <div class="card-header" role="tab" id="heading-d">
                            <h5 class="mb-0"> <a class="collapsed" data-toggle="collapse" href="#collapse-d" aria-expanded="false" aria-controls="collapse-d">Resolution Recorded <i class="fas fa-file-alt"></i></a> </h5>
                        </div>
                        <div id="collapse-d" class="collapse" role="tabpanel" data-parent="#content" aria-labelledby="heading-d">
                            <!-- Start -->
                            <div class="table-responsive">
                                <table id="tableCompleted" class="table mt-0  table-bordered dt-responsive nowrap tbltick new_width">
                                    <thead>
                                        <tr>
                                            <th width="33">S.No</th>
                                            <th width="100">Employee Code</th>
                                            <th>Employee Name</th>
                                            <th width="100">Location</th>
                                            <th width="100">Department</th>
                                            <th width="100">Designation</th>
                                            <th width="100">Request Date</th>
                                            <th width="100">Relieving date </th>
                                            <th class="w-50">Days left  </th>

                                            <th width="80">Action</th>

                                        </tr>

                                        <tr class="searchbar" role="row">
                                            <th class="searchhide"></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th class="searchhide"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                            <!-- End -->
                        </div>
                    </div>

                </div>
            </div>
            <!--- close tab --->
        </div>
    </div>
</div>


@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
    <script src="~/assets/design/Scripts/AddInit.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
    <script src="~/assets/design/scripts/DevScriptExit/LevelAction.js"></script>
    <script>
     function ViewResignation(id, from) {
 debugger;
 var mId = "";
 var url = "";
 ShowLoadingDialog();
 // var menuId = "@ViewBag.MenuID";
      mId = "@clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/ExitEmployee/LevelApproveAction")";
         url = "/ExitEmployee/LevelApproveAction?src=" + mId + "&id=" + id + "&Level=" + from;
 window.location.href = url;
 setTimeout(function () {
 CloseLoadingDialog();
 }, 4000);
 }


    </script>


}
