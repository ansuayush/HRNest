
@model IList<Mitr.Models.ConfigSetting>



@section style{
    @System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")
}

<div>
    @Html.Partial("ListHeader_Partial", "Config Setting List")


    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card p-0">
                <div class="card-body p-0">

                    <div class="x_content table-currency">
                        <input type="hidden" id="hdnAddUrl" name="hdnAddUrl" value="@Url.Action("ConfigSettingAdd",new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID+"*"+"/Tools/ConfigSettingAdd"+"*"+"0") })" />

                        <div class="table-responsive">
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>S.no.</th>
                                        <th>Action</th>

                                        <th>Category</th>
                                        <th>Sub Category</th>
                                        <th>Key</th>
                                        <th>Value</th>
                                        <th>Remarks</th>
                                        <th>Help</th>
                                        <th>Inserted Date</th>
                                        <th>Updated Date</th>
                                        <th>IP Address</th>
                                    </tr>
                                    <tr class="searchbar">
                                        <th class="searchhide"></th>
                                        <th class="searchhide"></th>

                                        <th></th>
                                        <th> </th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th> </th>
                                        <th> </th>
                                        <th> </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int Count = 0;}
                                    @foreach (Mitr.Models.ConfigSetting item in Model)
                                    {
                                        Count++;
                                        <tr class="@(item.IsActive == true?"": "trrowred")">
                                            <td>@Count</td>


                                            <td>
                                                <input type="hidden" id="hdn_@item.ConfigID" value="@item.ConfigKey" />

                                                @if (clsApplicationSetting.GetSessionValue("Modify") == "True")
                                                {
                                                    <a title="Edit" href="@Url.Action("ConfigSettingAdd", new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID + "*" + "/Tools/ConfigSettingAdd" + "*" + item.ConfigID) })" data-toggle='tooltip'> <i class="fas fa-edit checkgreen" aria-hidden="true"></i> </a>
                                                }
                                            </td>

                                            <td> @item.Category</td>
                                            <td> @item.SubCategory</td>
                                            <td style="background-color:antiquewhite">@item.ConfigKey</td>
                                            <td>@item.ConfigValue</td>
                                            <td>@item.Remarks</td>
                                            <td>@item.Help</td>
                                            <td>@item.CreatedDate</td>
                                            <td>@item.ModifiedDate</td>
                                            <td>@item.IPAddress</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>



@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")

    @Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/AddInit.js"))
    @Html.IncludeVersionedJs(Url.Content("~/assets/design/Scripts/ToolTip.js"))

    <script>





    </script>
}
