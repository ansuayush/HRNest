
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Ajax.BeginForm("Category", "Compliance",
     new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/Compliance/Category") },
     new AjaxOptions { HttpMethod = "POST", OnSuccess = "BindTarget", OnFailure = "CloseLoadingDialog()", OnBegin = "ShowLoadingDialog();" },
 new { @id = "CategoryFrom" })
 )
{
    <link href="~/Areas/DigitalLibrary/assets/css/tagsinput.css" rel="stylesheet" />

    <script src="~/Areas/DigitalLibrary/assets/js/tagsinput.js"></script>

    <input type="hidden" id="hdnMasterTableId" />
    <input type="hidden" id="hdnCateId" />
    <input type="hidden" id="hdnLoggedInUser" />
    <div class="inner-main defult-height pb-0">
        <div class="row">
            <div class="col-sm-5"><h1 class="heading-one ">Category</h1></div>
            <div class="col-sm-7 text-right">
                <a id="AnchorAddButton" class="btn mtr-g-grn btn-l ripplelink " data-toggle="modal" data-target="#sc" onclick="SubCateGredOut()">
                    <i class="fa fa-plus"></i> <span class="sbAtext">Add</span>
                </a>
            </div>
        </div>

        <div class="x_content table-currency mt-0">


            <div class="table-responsive ">
                <table id="tableCategory" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th width="20">S.No.</th>
                            <th>Category</th>
                            <th width="160">Inserted Date</th>
                            <th width="160"> Updated Date </th>
                            <th width="80">Status </th>
                            <th width="80">Action </th>
                        </tr>

                        <tr class="searchbar">
                            <th width="20" class="searchhide"></th>
                            <th>Category</th>
                            <th width="160">Inserted Date</th>
                            <th width="160"> Updated Date </th>
                            <th width="80">Status </th>
                            <th width="80" class="searchhide"> </th>
                        </tr>

                    </thead>
                </table>

            </div>
        </div>


    </div>

    <div class="modal fade pop-dgn" id="sc">
        <div class="modal-dialog modal-md">
            <div class="modal-content">

                <div class="modal-header blk-gdn-btn">
                    <h4 class="modal-title"><i class="fa fa-plus"></i>Add Category</h4>
                    <div class="close" data-dismiss="modal">&times;</div>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <label>Category<sup style="color: red;">*</sup></label>
                            <input type="text" id="txtSubCate" placeholder="Enter" class="form-control Mandatory" onchange="HideErrorMessage(this)">
                            <span id="sptxtSubCate" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                        </div>

                        <div class="col-sm-12 text-center">

                            <button type="button" class="btn mtr-o-grn btn-l ripplelink pull-right" data-toggle="modal" data-target="#ss" name="Command" value="Add" onclick="SaveSubCategory()"><i class="fas fa-save"></i>Save</button>
                            <button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal"><i class="fas fa-times"></i>Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade confirmmsg" id="confirmmsg">
        <div class="modal-dialog modal-md ">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="swal-icon swal-icon--warning">
                    <span class="swal-icon--warning__body">
                        <span class="swal-icon--warning__dot"></span>
                    </span>
                </div>

                <div class="modal-body ">
                    <input type="hidden" id="hiddenCateId" />
                    <div class="swal-title text-center">are you sure want to <enum id="acti">Deactivate</enum> <strong id="record"> </strong></div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" data-toggle="modal" class="btn cnl-btn">No</button>
                    <button type="button" class="btn mtr-o-grn" onclick="Activate()">Yes</button>
                </div>

            </div>



        </div>

    </div>
    @section scripts    {
        @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
        @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
        <script src="~/assets/design/Scripts/AddInit.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
        <script src="~/Areas/Compliance/DevScript/CategoryMaster.js"></script>



    }
}

