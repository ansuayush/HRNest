@model IList<Mitr.Models.ExternalMember>

@section style{
    @System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="inner-main mb-5 pb-0">
    @Html.Partial("ListHeader_Partial", "External Member Master")
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card p-0">
                <div class="card-body p-0">
                    <div class="x_content table-currency mt-0">
                        <input type="hidden" id="hdnAddUrl" name="hdnAddUrl" value="@Url.Action("ExternalMemberAdd",new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/Grievance/ExternalMemberAdd*0") })" />
                        <div class="table-responsive">
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive m-table nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>S.no.</th>
                                        <th>External Code</th>
                                        <th>External Member</th>
                                        <th>Date of Joining</th>
                                        <th>Date of Leaving</th>
                                        <th>Mobile</th>
                                        <th>Email Id</th>
                                        <th>Action</th>
                                    </tr>
                                    <tr class="searchbar">
                                        <th class="searchhide"></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th> </th>
                                        <th> </th>
                                        <th> </th>
                                        <th class="searchhide"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int Count = 0;}
                                    @foreach (Mitr.Models.ExternalMember item in Model)
                                    {
                                        Count++;
                                        <tr class="@(item.IsActive == true?"": "trrowred")">
                                            <td>@Count</td>
                                            <td> @item.ExternalCode</td>
                                            <td> @item.External_Member</td>
                                            <td>@item.DOJ</td>
                                            <td>@item.DOL</td>
                                            <td>@item.Mobile</td>
                                            <td>@item.EmailId</td>
                                            <td>
                                                <input type="hidden" name="I" value="@item.ID" />
                                                <input type="hidden" name="N" value="@item.ExternalCode" />
                                                @if (clsApplicationSetting.GetSessionValue("Modify") == "True")
                                                {
                                                    @*@Html.Raw(item.IsActive == true
                                                        ? "<a  data-toggle='tooltip' data-original-title='Click to DeActivate' list='masterall' OP='0' class='AIsActive' > <i class='fa fa-check-circle checkgreen' aria-hidden='true'></i></a>"
                                                        :
                                                        "<a data-toggle='tooltip' data-original-title='Click to Activate' list='masterall' OP='1'  class='AIsActive' > <i class='fa fa-times-circle crossred' aria-hidden='true'></i></a>"
                                                        )*@
                                                    <a title="Edit" href="@Url.Action("ExternalMemberAdd",new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID.ToString() + "*/Grievance/ExternalMemberAdd*"+item.ID) })" data-toggle='tooltip'><i class="fas fa-edit checkgreen" aria-hidden="true"></i> </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<div class="modal fade pop-dgn" id="ViewModal">
    <div class="modal-dialog modal-md">
        <div class="modal-content">

            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title"><i class="fa fa-plus"></i>Add External Member </h4>
                <div class="close" data-dismiss="modal">&times;</div>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div id="TagetDiv"></div>
            </div>
        </div>
    </div>
</div>


@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
     <script>
    $('table').each(
      function() {
        var titles;
     
        titles = [];

        $('thead th', this).each(
        function() {
          titles.push($(this).text());
        });

        
        $('tbody tr', this).each(
        function() {
          
          $('td', this).each(
          function(index) {
            $(this).attr('data-label', titles[index]);
            $(this).wrapInner('<span></span>')
          });
        });
      });
</script>
}

