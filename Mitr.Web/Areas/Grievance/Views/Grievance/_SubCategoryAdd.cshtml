
@model Mitr.Models.SubCategory
@using (Ajax.BeginForm("SubCategoryAdd", "Grievance",
		new { src = clsApplicationSetting.EncryptQueryString(ViewBag.MenuID + "*" + "/Grievance/SubCategoryAdd*" + ViewBag.ID) },
		 new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnBegin = "ShowLoadingDialog()" },
			new { @id = "form" }))
{


	@Html.HiddenFor(x => Model.SubCategoryID)

	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 form-group">
			<label>Category Name<sup>*</sup></label>
			@Html.DropDownListFor(model => model.CategoryID, new SelectList(ViewBag.List, "ID", "Name", Model.CategoryID), "select", new { @class = "form-control applyselect" })
			@Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
		</div>
		<div class="col-lg-6 col-md-6 col-sm-6 form-group">
			<label>Sub-Category Name<sup>*</sup></label>
			@Html.TextBoxFor(model => model.SubCategoryName, new { @class = "form-control", @placeholder = "Enter" })
			@Html.ValidationMessageFor(model => model.SubCategoryName, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 form-group">
			<label>Description<sup>*</sup></label>
			@Html.TextAreaFor(model => model.Description, new { @class = "form-control h-100", @placeholder = "Enter" })
			@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
		</div>

		<div class="col-sm-12">
			<ul class="list-unstyled inlin-list">
				<li>
					@*<input type="checkbox" id="employee" name="2">*@@*<label for="AnonymousEmployee"></label>*@
					@Html.CheckBoxFor(x => x.AnonymousEmployee, new { @class = "srcheck" })<label for="lvl1">Can it be submitted as Anonymous?</label>
				</li>
			</ul>
		</div>
	</div>

	<div class="text-center">
		<button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal"><i class="fas fa-times"></i>Close</button>

		@if (Model.SubCategoryID > 0)
		{
			<button type="submit" class="btn mtr-g-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Update</button>
		}
		else
		{
			<button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
		}
		
	</div>

}



