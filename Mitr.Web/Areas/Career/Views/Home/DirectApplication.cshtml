                                    @Html.ValidationMessageFor(model => model.SkillsID, "", new { @class = "text-danger" })*@

                            </div>
                            <div class="col-sm-12 form-group">
                                <label class="mb-2">
                                    References<br>
                                    <small class="lgt-text">Please list three professional references not related to you, with full name, email address, phone number, and relationship. If you don’t have three professional references, then list personal, unrelated references. </small>
                                </label>

                                <table id="tblRef" class="table table-stripted mt-0 mb-2">
                                    <thead>
                                        <tr>
                                            <th class="w-33">SNo.</th>
                                            <th class="tw-200">Name <span style="color:red">*</span></th>
                                            <th class="tw-100">Email ID	<span style="color:red">*</span></th>
                                            <th class="tw-100">Relationship<span style="color:red">*</span></th>
                                            <th class="tw-100">Phone Number	<span style="color:red">*</span></th>
                                            <th class="w-33"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.ReferencesList != null)
                                        {
                                            int Rcount = 0;
                                            for (int i = 0; i < Model.ReferencesList.Count; i++)
                                            {
                                                Rcount++;
                                                <tr>
                                                    <td class="text-center">
                                                        <label id="span_@Rcount" name="span_@Rcount">@Rcount </label>
                                                    </td>
                                                    <td>
