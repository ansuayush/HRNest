                                                    <td>
                                                        <label id="span_@Ecount" name="span_@Ecount">@Ecount </label>
                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(x => Model.EducationList[i].Course, new { @class = "form-control", @placeholder = "Enter" })
                                                        @Html.ValidationMessageFor(x => Model.EducationList[i].Course, "", new { @class = "text-danger" })
                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(x => Model.EducationList[i].University, new { @class = "form-control", @placeholder = "Enter" })
                                                        @Html.ValidationMessageFor(x => Model.EducationList[i].University, "", new { @class = "text-danger" })
                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(x => Model.EducationList[i].Location, new { @class = "form-control", @placeholder = "Enter" })
                                                        @Html.ValidationMessageFor(x => Model.EducationList[i].Location, "", new { @class = "text-danger" })
                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(x => Model.EducationList[i].year, new { @onkeypress = "KeyPressPeriod(event,this);", @onchage = "", @class = "form-control", @placeholder = "Enter" })
                                                        @Html.ValidationMessageFor(x => Model.EducationList[i].year, "", new { @class = "text-danger" })
                                                    </td>

                                                    <td Class="text-center">
                                                        @if (Ecount > 1)
                                                        {
                                                            <a onclick="DeleteEduRow(this)" class="remove " data-toggle="tooltip" data-original-title="Remove"><i class="fas fa-window-close red-clr m-0" aria-hidden="true"></i></a>
                                                        }
                                                        else
                                                        {
                                                            <a class="remove" data-toggle="tooltip" data-original-title="Remove"><i class="fas fa-window-close m-0" aria-hidden="true"></i></a>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                                <div class="text-right">
                                    <a class="btn mtr-g-grn m-0" onclick="AddEdu();"><i class="fas fa-plus"></i>Add</a>
                                </div>
                            </div>

