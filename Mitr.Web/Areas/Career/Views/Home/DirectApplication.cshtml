                                <label>Annual Current Salary<span style="color:red">*</span></label>
                                @Html.TextBoxFor(x => Model.CurrentSalary, new { @class = "form-control", @placeholder = "Amount", @type = "number" })
                                @Html.ValidationMessageFor(x => Model.CurrentSalary, "", new { @class = "text-danger" })
