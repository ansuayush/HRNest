                            </div>
                            <div class="col-sm-12 form-group">
                                <label class="mb-2">
                                    Special Skills<br>
                                    <small class="lgt-text"> List any special skills or experience that you feel would help you in the position that you are applying for (leadership, organizations/teams, etc.)</small>
                                </label>
                                @Html.TextBoxFor(x => Model.SpecialSkills, new { @class = "form-control" })
