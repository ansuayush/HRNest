@model Mitr.Areas.Career.Models.JobApplication.Apply
@{

}
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="inner-main mt-3 ">


            @using (Ajax.BeginForm("DirectApplication", "/Home", new { Code = ViewBag.Code, Command = ViewBag.Code },
            new AjaxOptions { HttpMethod = "POST", OnSuccess = "ApplicationSuccess", OnBegin = "ShowLoadingDialog();", OnFailure = "CloseLoadingDialog();" },
            new
            {
                @id = "ApplicationFrom",
                enctype = "multipart/form-data"
            })
            )
            {
                <input type="hidden" name="@Html.NameFor(x=>x.Code)" value="@ViewBag.Code" />
                <input type="hidden" name="REC_ReqID" value="@ViewBag.REC_ReqID" />

                <h1 class="heading-one text-center">Application Form</h1>
                <h2 class="header-two"><i class="fas fa-info-circle"></i>Personal Information</h2>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-lg-12 hw-575 col-md-4 col-sm-6  form-group">
                                <label>Name<span style="color:red">*</span></label>
                                @Html.TextBoxFor(x => Model.Name, new { @class = "form-control", @placeholder = "Enter" })
                                @Html.ValidationMessageFor(x => Model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-3 hw-575 col-md-3 col-sm-6  form-group">
                                <label>Date of Birth<span style="color:red">*</span></label>
                                @Html.TextBoxFor(x => Model.DOB, new { @class = "form-control", @type = "date" })
                                @Html.ValidationMessageFor(x => Model.DOB, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-3 hw-575 col-md-3 col-sm-6  form-group">
                                <label>Gender<span style="color:red">*</span></label>
                                @{
                                    List<SelectListItem> D1 = new List<SelectListItem>
                                                                                                                                                                                                                                                                                                                                                                                                                                                    {
                                                            new SelectListItem{Text="Male",Value="Male" },
                                                            new SelectListItem{Text="Female",Value="Female" },
                                                            new SelectListItem{Text="Others",Value="Others" }
                                                        };
                                }
                                @Html.DropDownListFor(model => model.Gender, new SelectList(D1, "Value", "text", Model.Gender), "Select", new { @class = "form-control applyselect" })
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-3 hw-575 col-md-3 col-sm-6  form-group">
                                <label>Nationality <span style="color:red">*</span></label>

                                @{
                                    List<SelectListItem> D12 = new List<SelectListItem>
                                                                                                                                                                                                                                                                                                                                                                                                                                                    {
                                                        new SelectListItem{Text="Indian",Value="Indian" },
                                                        new SelectListItem{Text="Foreign",Value="Foreign" }
                                                        };
                                }
                                @Html.DropDownListFor(model => model.Nationality, new SelectList(D12, "Value", "text", Model.Gender), "Select", new { @class = "form-control applyselect" })
                                @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-lg-3 hw-575 col-md-3 col-sm-6  form-group">
                                <label>Contact Number <span style="color:red">*</span></label>
                                @Html.TextBoxFor(x => Model.Mobile, new { @id = "txtContactNumber", @class = "form-control", @placeholder = "Enter" })
                                @Html.ValidationMessageFor(x => Model.Mobile, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-3 hw-575 col-md-3 col-sm-6  form-group">
                                <label>Email ID <span style="color:red">*</span></label>
                                @Html.TextBoxFor(x => Model.EmailID, new { @class = "form-control", @placeholder = "Enter" })
                                @Html.ValidationMessageFor(x => Model.EmailID, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-9 hw-575 col-md-9 col-sm-6  form-group">
                                <label>Address<span style="color:red">*</span></label>
                                @Html.TextAreaFor(x => Model.Address, new { @class = "form-control", @placeholder = "Enter" })
                                @Html.ValidationMessageFor(x => Model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <h2 class="header-two"><i class="fas fa-users"></i>About the position</h2>
                <div class="row">
