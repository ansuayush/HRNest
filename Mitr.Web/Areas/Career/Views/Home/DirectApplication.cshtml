                                                        @Html.ValidationMessageFor(up => Model.ReferencesList[i].Name, "", new { @class = "text-danger" })
                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(x => Model.ReferencesList[i].Email, new { @class = "form-control", @placeholder = "Enter" })
                                                        @Html.ValidationMessageFor(up => Model.ReferencesList[i].Email, "", new { @class = "text-danger" })
                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(x => Model.ReferencesList[i].Relationship, new { @class = "form-control", @placeholder = "Enter" })
                                                        @Html.ValidationMessageFor(up => Model.ReferencesList[i].Relationship, "", new { @class = "text-danger" })
                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(x => Model.ReferencesList[i].Phone, new { @class = "form-control", @placeholder = "Enter" })
                                                        @Html.ValidationMessageFor(up => Model.ReferencesList[i].Phone, "", new { @class = "text-danger" })
                                                    </td>

                                                    <td>
                                                        @if (Rcount > 2)
                                                        {
                                                            <a onclick="DeleteRefRow(this)" class="remove" data-toggle="tooltip" data-original-title="Remove"><i class="fas fa-window-close red-clr m-0" aria-hidden="true"></i></a>
                                                        }
                                                        else
                                                        {
                                                            <a class="remove" data-toggle="tooltip" data-original-title="Remove"><i class="fas fa-window-close m-0" aria-hidden="true"></i></a>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                                <div class="text-right" style="display:none">
                                    <a class="btn mtr-g-grn m-0" onclick="AddRef();"><i class="fas fa-plus"></i>Add</a>
                                </div>

                            </div>
                        </div>
                    </div>
