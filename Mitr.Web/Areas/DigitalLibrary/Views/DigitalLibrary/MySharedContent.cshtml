<div class="modal fade pop-dgn" id="dwn">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title"><i class="fas fa-plus-circle" id="hProjectName"></i></h4>
                <div class="close" data-dismiss="modal">&times;</div>
            </div>
            <!-- Modal body -->
            <div class="modal-body p-0">
                <!------->
                <div class="tab-main mb-2">
                    <ul id="tabs" class="nav nav-tabs " role="tablist">
                        <li class="nav-item"> <a id="tab-A" href="#active-log" class="nav-link ripplelink active" data-toggle="tab" role="tab" aria-selected="true"><i class="fas fa-file-alt"></i>Document </a> </li>
                        <li class="nav-item"> <a id="tab-B" href="#leaves" class="nav-link ripplelink" data-toggle="tab" role="tab" aria-selected="false"><i class="fas fa-image"></i>Photo</a> </li>
                        <li class="nav-item"> <a id="tab-C" href="#rr" class="nav-link ripplelink" data-toggle="tab" role="tab"><i class="fas fa-video"></i>Video</a> </li>
                    </ul>
                    <div id="content" class="tab-content shadow-box p-0" role="tablist">
                        <div id="active-log" class="card tab-pane fade active show" role="tabpanel" aria-labelledby="tab-A">
                            <div class="card-header" role="tab" id="heading-A">
                                <h5 class="mb-0">
                                    <!-- Note: `data-parent` removed from here -->
                                    <a data-toggle="collapse" href="#collapse-A" aria-expanded="true" aria-controls="collapse-A">Tab 1</a>
                                </h5>
                            </div>

                            <!-- Note: New place of `data-parent` -->
                            <div id="collapse-A" class="collapse" data-parent="#content" role="tabpanel" aria-labelledby="heading-A">
                                <div class="card-body">
                                    <!-- Start -->
                                    <table class="table table-striped tblwobdr" id="tblDocument">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th width="150">Document Uploaded By</th>
                                                <th width="80">File Size</th>
                                                <th width="160"></th>
                                            </tr>
                                        </thead>
                                    </table>
                                    <!-- End -->
                                </div>
                            </div>
                        </div>
                        <div id="leaves" class="card tab-pane fade" role="tabpanel" aria-labelledby="tab-B">
                            <div class="card-header" role="tab" id="heading-B">
                                <h5 class="mb-0"> <a class="collapsed" data-toggle="collapse" href="#collapse-B" aria-expanded="false" aria-controls="collapse-B">Tab 2</a> </h5>
                            </div>
                            <div id="collapse-B" class="collapse" data-parent="#content" role="tabpanel" aria-labelledby="heading-B">


                                <!-- Start -->
                                <table class="table table-striped tblwobdr" id="tblPhoto">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th width="150">Document Uploaded By</th>
                                            <th width="80">File Size</th>
                                            <th width="160"></th>
                                        </tr>
                                    </thead>

                                </table>
                                <!-- End -->
                            </div>
                        </div>
                        <div id="rr" class="card tab-pane fade" role="tabpanel" aria-labelledby="tab-d">
                            <div class="card-header" role="tab" id="heading-d">
                                <h5 class="mb-0"> <a class="collapsed" data-toggle="collapse" href="#collapse-d" aria-expanded="false" aria-controls="collapse-d">Tab 4</a> </h5>
                            </div>
                            <div id="collapse-d" class="collapse" role="tabpanel" data-parent="#content" aria-labelledby="heading-d">
                                <!-- Start -->
                                <table class="table table-striped tblwobdr" id="tblVideo">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th width="150">Document Uploaded By</th>
                                            <th width="80">File Size</th>
                                            <th width="160"></th>
                                        </tr>
                                    </thead>
                                </table>
                                <!-- End -->
                            </div>
                        </div>
                    </div>
                </div>
                <!------>
                <div class="text-center">
                    <button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal"><i class="fas fa-times"></i>Close<span class="ink animate" style="height: 78px; width: 78px; left: -13px; top: -21px;"></span></button>

                    <a href="#" id="btnOpenPopup" style="display:none;" data-toggle="modal" data-target="#dwn">View</a>

                    <a href="#" id="btnSharePopup" style="display:none;" data-toggle="modal" data-target="#shareContent">View</a>
                </div>
            </div>
        </div>
