                        <label>To <sup>*</sup></label>
                        <select class="form-control applyselect" id="shareEmployee" multiple="">                         
                        </select>
                    </div>
                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn mtr-o-grn" name="Command" value="Add" onclick="SaveSharedContent()"   data-dismiss="modal"><i class="fas fa-envelope"></i>Send</button>
                        <button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal"><i class="fas fa-times"></i>Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


