
@{
	ViewBag.Title = "Masters";
}

<link href="~/Areas/DigitalLibrary/assets/css/tagsinput.css" rel="stylesheet" />
<script src="~/Areas/DigitalLibrary/assets/js/tagsinput.js"></script>

<style>

	.dx-datagrid {
		font-size: 12px;
	}

		.dx-datagrid .dx-datagrid-headers {
			font-size: 25px;
		}

		.dx-datagrid .dx-row {
			font-size: 12px;
		}
</style>

<input type="hidden" id="hdnMasterTableId" />

<div class="inner-main pb-0">

	<div>
		<div class="col-sm-5"><h1 class="heading-one ">Manage Masters</h1></div>
		<div class="row">


			<div class="col-sm-3 form-group">
				<label>Master Tables <sup>*</sup></label>
				<select class="form-control applyselect Mandatory" id="ddlMasterTable">
				</select>
			</div>
			<div class="col-sm-3 form-group">
				<label>Parent Data <sup></sup></label>
				<select class="form-control applyselect" id="ddlParent">
				</select>
			</div>
			<div class="col-sm-3 form-group">
				<label>Code*</label>
				<input type="text" placeholder="Enter" name="" id="txtCode" class="Mandatory">
			</div>
			<div class="col-sm-3 form-group">
				<label>Value*</label>
				<input type="text" placeholder="Enter" name="" id="txtValue" class="Mandatory">
			</div>


		</div>
		<div class="row">

			<div class="col-sm-12">
				<a id="AnchorAddButton" class="btn mtr-g-grn btn-l ripplelink " data-toggle="modal" onclick="SaveData()">
					<i class="fa fa-plus"></i> <span class="sbAtext">Add</span>
				</a>
			</div>
		</div>

	</div>


	<div class="x_content table-currency mt-0">


		<div class="table-responsive ">
			<div id="gridContainer" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width">

			</div>
		</div>
	</div>


</div>




<div class="modal fade pop-dgn" id="sc">
	<div class="modal-dialog modal-md">
		<div class="modal-content">

			<div class="modal-header blk-gdn-btn">
				<h4 class="modal-title"><i class="fa fa-plus"></i>Manage Master</h4>
				<div class="close" data-dismiss="modal">&times;</div>
			</div>
			<!-- Modal body -->
			<div class="modal-body">
				<div class="row">
					<div class="col-sm-3 form-group">
						<label> Master Table</label>
						<input type="text" id="txtMasterTableType" disabled="" placeholder="Enter" class="form-control">
					</div>
					<div class="col-sm-3 form-group">
						<label> Parent</label>
						<input type="text" id="txtParent" disabled="" placeholder="Enter" class="form-control">
					</div>
					<div class="col-sm-3 form-group">
						<label> Code*</label>
						<input type="text" id="txtEditCode" placeholder="Enter" class="form-control UpdateMandate">
					</div>
					<div class="col-sm-3 form-group">
						<label> Value*</label>
						<input type="text" id="txtEditValue" placeholder="Enter" class="form-control UpdateMandate">
					</div>

					<div class="col-sm-12 text-center">

						<button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" data-toggle="modal" data-target="#ss" name="Command" value="Add" onclick="UpdateData()"><i class="fas fa-save"></i>Save</button>
						<button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal"><i class="fas fa-times"></i>Close</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section scripts    {
	@System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
	@System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
	<script src="~/assets/design/Scripts/AddInit.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
	<script src="~/Areas/DigitalLibrary/DevScript/Masters.js"></script>

    <script>
		var IsEDUser = '@ViewBag.IsED';
       var loggedinUserid = '@ViewBag.UserId';
		var loggedinUserName = '@ViewBag.UserName';
		var UserGrade = '@ViewBag.Grade';
			var IsPM = '@ViewBag.IsPM';
    </script>
}

