
@{
    ViewBag.Title = "Report";
}
<style>

    .dx-datagrid {
        font-size: 12px;
    }

        .dx-datagrid .dx-datagrid-headers {
            font-size: 25px;
        }

        .dx-datagrid .dx-row {
            font-size: 12px;
            word-wrap: break-word;
        }

    .adaptiveRowStyle {
        font-size: 20pt;
        word-wrap: break-word;
    }
    
</style>
<div class="inner-main defult-height pb-0" data-select2-id="10">
    <h1 class="heading-one ">Download DL Report</h1>

    <div class="row" data-select2-id="9">

        <div class="col-lg-2 col-md-2 col-sm-2 slt-dgn  form-group" data-select2-id="8">
            <label class="lbl-abs">Project</label>
            <select id="pdProjectCode" class="form-control applyselect ">
            </select>

        </div>
         
        <div class="col-lg-2 col-md-2 col-sm-2 slt-dgn  form-group" data-select2-id="8">
            <label class="lbl-abs">Content Origin</label>
            <select id="pdPlaceOfOrigin" class="form-control applyselect ">
            </select>

        </div>     
         <div class="col-lg-2 col-md-2 col-sm-2 slt-dgn  form-group" data-select2-id="8">
            <label class="lbl-abs">Requester Location</label>
            <select id="RequesterLocation" class="form-control applyselect ">
            </select>

        </div> 

        <div class="col-lg-2 col-md-2 col-sm-2  form-group">
            <label class="lbl-abs">From </label>
            <input class="form-control actdate" id="StartDate" name="StartDate" type="date" value="" onchange="HideErrorMessage(this)">
            <span id="spStartDate" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
        </div>

        <div class="col-lg-2 col-md-2 col-sm-2  form-group">
            <label class="lbl-abs">To</label>
            <input class="form-control actdate ddapplyaction" id="EndDate" name="EndDate" type="date" value="" onchange="HideErrorMessage(this)">
            <span id="spEndDate" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
        </div>

        <div class="col-lg-2 col-md-2 col-sm-2 slt-dgn  form-group" data-select2-id="8">
            <label class="lbl-abs">Category</label>
            <select id="ddlCategory" class="form-control applyselect " onchange="FillSubCategory(this)">
            </select>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 slt-dgn  form-group" data-select2-id="8">
            <label class="lbl-abs">Sub Category</label>
            <select class="form-control applyselect " id="pdSubCategory" data-select2-id="1" tabindex="-1" aria-hidden="true">
            </select>

        </div>


        <div class=" col-sm-12 align-self-center">
            <button type="button" onclick="Search()" class="btn mtr-g-grn btn-l ripplelink" id="btnSearch" name="Command" value="Search" fdprocessedid="axo3nq"><i class="fas fa-search"></i>Search</button>
            <button type="button" onclick="Export()" class="btn mtr-g-grn btn-l ripplelink" id="btnExportAll" value="Search" fdprocessedid="34x0kq"><i class="fas fa-file-excel"></i>Export To Excel</button>
        </div>

      

    </div>

    <div class="table-scrollable report-hight">

                <table id="table" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>

                            <th width="90">Req No</th>
                            <th>Req.Date</th>
                            <th>Req.By</th>
                            <th>Reqester Location</th>
                          
                            <th>Category</th>
                            <th>Sub Category</th>
                            <th>Project Code</th>
                            <th>Project Name</th>
                            <th>Thematic Area</th>
                            <th>Funded By</th>
                            <th>Content Origin</th>
                            <th>Proposal Number (Proposal)</th>
                            <th>Report No.(Project Doc)</th>
                            <th>Copyright(Capacity Building)</th>
                            <th>Project Manager/Lead</th>
                            <th>Title</th>
                            <th>Sub Title</th>
                            <th>Tag</th>
                            <th>Abstract Summary</th>
                            <th>Remarks</th>
                            <th>Document Sensitivity</th>
                            <th>Author</th>
                            <th>Accepted (Proposal Doc)</th>
                            <th>File Name</th>
                            <th>Attachment Type</th>
                            <th>File Size</th>
                            <th>Status</th>
                            <th>Reason</th>
                        </tr>
                    </thead>
                </table>
            </div>
</div>


