
@{
    ViewBag.Title = "TermCondition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<input type="hidden" id="hdnMasterTableId" />
<input type="hidden" id="hdnCateId" />
<input type="hidden" id="hdnLoggedInUser" />
<div class="inner-main defult-height pb-0">
    <div class="row">
        <div class="col-sm-5"><h1 class="heading-one ">Term and Condition Master</h1></div>

    </div>

    <div class="x_content table-currency mt-0">


        <div class="table-responsive ">
            <table id="table" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th>Contract/Agreement Type</th>
                        <th width="80">Action </th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>


</div>

<div class="modal fade" id="sc">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title"><i class="fa fa-plus"></i>Term and Condition Master</h4>
                <div class="close" data-dismiss="modal">&times;</div>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">

                    <div class="col-sm-12 form-group">
                        <label>Contract/Agreement Type<span class="required">*</span> </label>
                        <select class="form-control applyselect Mandatory" id="ddlCategory" onchange="HideErrorMessage(this)" disabled>
                            <option value="Purchase Order (PO)">Purchase Order (PO)</option>
                            <option value="Consultant">Consultant</option>
                            <option value="Sub-grant">Sub-grant</option>
                        </select>

                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 form-group">
                        <label>Term and Condition </label>
                        <textarea class="form-control Mandatory" id="txtTemplate" onchange="HideErrorMessage(this)"></textarea>
                        <span id="sptxtTemplate" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>


                    </div>
                </div>
                <div class="row">

                    <div class="col-sm-12 text-center">

                        <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" data-toggle="modal" data-target="#ss" name="Command" value="Add" onclick="SaveProcurApprovalAuthority()"><i class="fas fa-save"></i>Save</button>
                        <button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal"><i class="fas fa-times"></i>Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
    <script src="~/assets/design/Scripts/AddInit.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
    <script src="~/Areas/Procurement/DevScript/TermCondition.js"></script>
    <script src="~/ckeditor/ckeditor.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
    <script>
        CKEDITOR.replace("txtTemplate");

		 var IsEDUser = '@ViewBag.IsED';
       var loggedinUserid = '@ViewBag.UserId';
		var loggedinUserName = '@ViewBag.UserName';
		var UserGrade = '@ViewBag.Grade';
			var IsPM = '@ViewBag.IsPM';
    </script>
}

