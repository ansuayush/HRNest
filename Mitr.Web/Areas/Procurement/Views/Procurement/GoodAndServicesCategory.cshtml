
@{

    ViewBag.Title = "SubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/DigitalLibrary/assets/css/tagsinput.css" rel="stylesheet" />

<script src="~/Areas/DigitalLibrary/assets/js/tagsinput.js"></script>

<input type="hidden" id="hdnMasterTableId" />
<input type="hidden" id="hdnCateId" />
<input type="hidden" id="hdnLoggedInUser" />
<div class="inner-main defult-height pb-0">
    <div class="row">
        <div class="col-sm-5"><h1 class="heading-one ">Good And Services Category Master</h1></div>
        <div class="col-sm-7 text-right">
            <a id="AnchorAddButton" onclick="ClearFormControl()" class="btn mtr-g-grn btn-l ripplelink " data-toggle="modal" data-target="#sc">
                <i class="fa fa-plus"></i> <span class="sbAtext">Add</span>
            </a>
        </div>
    </div>

    <div class="x_content table-currency mt-0">


        <div class="table-responsive ">
            <table id="table" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th width="20">S.No.</th>
                        <th>
                            Category Name
                        </th>
                        <th width="160">Inserted Date</th>
                        <th width="160"> Updated Date </th>
                        <th width="80">IP Address </th>
                        <th width="80">Status </th>
                        <th width="80">Action </th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>


</div>

<div class="modal fade pop-dgn" id="sc">
    <div class="modal-dialog modal-md">
        <div class="modal-content">

            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title"><i class="fa fa-plus"></i>Add  Category </h4>
                <div class="close" data-dismiss="modal">&times;</div>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">

                    <div class="col-sm-12 form-group">
                        <label>Category Name<span class="required">*</span> </label>
                        <input type="text" id="txtSubCate" placeholder="Enter" class="form-control Mandatory" onchange="HideErrorMessage(this)">
                        <span id="sptxtSubCate" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>

                    <div class="col-lg-12 text-center mt-3">

                        <button type="submit" class="btn mtr-o-grn btn-l ripplelink pull-right" data-toggle="modal" data-target="#ss" name="Command" value="Add" onclick="SaveGoodAndServicesCategory()"><i class="fas fa-save"></i>Save</button>
                        <button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal"><i class="fas fa-times"></i>Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
    <script src="~/assets/design/Scripts/AddInit.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
    <script src="~/Areas/Procurement/DevScript/GoodAndServicesCategory.js"></script>

    <script>
		 var IsEDUser = '@ViewBag.IsED';
       var loggedinUserid = '@ViewBag.UserId';
		var loggedinUserName = '@ViewBag.UserName';
		var UserGrade = '@ViewBag.Grade';
			var IsPM = '@ViewBag.IsPM';
    </script>
}