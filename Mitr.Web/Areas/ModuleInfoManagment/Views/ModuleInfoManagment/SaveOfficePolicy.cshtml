@{
    ViewBag.Title = "SaveOfficePolicy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="hdnMasterTableId" />
<input type="hidden" id="hdnThematicId" />
<input type="hidden" id="hdnLoggedInUser" />

<div class="inner-main defult-height pb-0">
    <input type="hidden" id="hdnIdToEditRecord" />
    <div class="row">
        <div class="col-sm-5">
            <h1 class="heading-one">Office Policies</h1>
        </div>
        <div class="col-sm-7 text-right">
            <a id="AnchorAddButton" class="btn mtr-g-grn btn-l ripplelink" data-toggle="modal" data-target="#sc" onclick="SubCateGredOut()">
                <i class="fa fa-plus"></i> <span class="sbAtext">Add</span>
            </a>
        </div>
    </div>

    <div class="x_content table-currency mt-0">
        <div class="table-responsive">
            <table id="tableOfficePolicy" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th width="20">S.No</th>
                        <th>Policy Name</th>
                        <th>Policy Attachment</th>
                        <th width="60">Priority</th>
                        <th width="160">Inserted Date</th>
                        <th width="160">Updated Date</th>
                        <th width="80">Status</th>
                        <th width="80">Action</th>
                    </tr>
                    <tr class="searchbar" role="row">
                        <th class="searchhide"></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th class="searchhide"></th>
                        <th class="searchhide"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade pop-dgn" id="sc"data-backdrop="static">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title"><i class="fa fa-plus"></i> Add Policy Master</h4>
                <div class="close" style="color:white" data-dismiss="modal">&times;</div>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 form-group">
                        <input type="hidden" id="hdnMasterTableId" name="id" value="@ViewBag.ID" />
                        <input type="hidden" id="hdnUploadActualFileName" />
                        <input type="hidden" id="hdnUploadNewFileName" />
                        <input type="hidden" id="hdnUploadFileUrl" />
                        <label>Policy Name<sup style="color: red;">*</sup></label>
                        <input type="text" id="txtPolicy" class="form-control Mandatory" value="" onchange="HideErrorMessage(this)">
                        <span id="sptxtPolicy" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>
                    <div class="col-sm-9 form-group">
                        <label>Document Attachment<sup style="color: red;">*</sup></label>
                        <input type="file" id="txtAttachment" class="form-control " value="" onchange="UploadDocumentPolicy()">
                        <input type="text" id="txtAttachmentfile" style="display:none" ; class="form-control Mandatory" value="" onchange="HideErrorMessage(this)">
                        <span id="sptxtAttachmentfile" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>

                        <div class="vwdwn showatchimg">
                            <label id="lblAttachementRFPDownload"></label>
                            <span class="vwdwnicon delete rmatch green-clr" data-toggle="tooltip" title="" data-original-title="Download">
                                <button id="btnDownload1" onclick="DownloadFileRFP()" target='_blank' class='green-clr'><i class='fas fa-download'></i></button>
                            </span>
                        </div>
                    </div>


                    <div class="col-sm-3 form-group">

                        <label>Priority <sup style="color: red;">*</sup></label>
                        <input type="number" id="txtPriority" class="form-control Mandatory" value="" onchange="HideErrorMessage(this)" style="text-align:center">
                        <span id="sptxtPriority" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>
                </div>
                <div class="col-sm-12 text-center">
                    <button type="button" class="btn mtr-o-grn btn-l ripplelink pull-right" name="Command" value="Add" onclick="OfficePolicy()">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal">
                        <i class="fas fa-times"></i> Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
    <script src="~/assets/design/Scripts/AddInit.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
    <script src="~/Areas/ModuleInfoManagment/DevScript/OfficePolicy.js"></script>
    <script>
        var loggedinUserid = '@ViewBag.UserId';
        var Policy_ID = '@ViewBag.ID';
    </script>
}