@{ ViewBag.Title = "PageMaster";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<input type="hidden" id="hdnMasterTableId" />
<input type="hidden" id="hdnThematicId" />
<input type="hidden" id="hdnLoggedInUser" />

<div class="inner-main default-height pb-0">
    <div class="row">
        <div class="col-sm-5">
            <h1 class="heading-one">Page Master</h1>
        </div>
        <div class="col-sm-7 text-right">
            <a id="AnchorAddButton" class="btn mtr-g-grn btn-l ripplelink" data-toggle="modal" data-target="#sc" onclick="SubCateGredOut()">
                <i class="fa fa-plus"></i> <span class="sbAtext">Add</span>
            </a>
        </div>
    </div>

    <div class="x_content table-currency mt-0">
        <div class="table-responsive">
            <table id="Pagetable" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th width="20">S.No.</th>
                        <th>Module Name</th>
                        <th>Topic Name</th>
                        <th>Page Name</th>
                        <th>Priority</th>
                        <th width="160">Inserted Date</th>
                        <th width="160">Updated Date</th>
                        <th width="80">Status</th>
                        <th width="80">Action</th>
                    </tr>

                     <tr class="searchbar" role="row">
                        <th class="searchhide"></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th class="searchhide"></th>
                        <th class="searchhide"></th>


                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="sc" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title" id="modalTitle"><i class="fa fa-plus"></i> Add Page Master</h4>
                <button type="button" class="close" data-dismiss="modal" style="color:white" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <label for="topicname">Topic Name<sup style="color: red;">*</sup></label>
                        <select id="topicname" class="form-control applyselect Mandatory" onchange="fetchModuleName(this)" onchange="HideErrorMessage(this)">
                        </select>
                        <span id="sptopicname" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>

                    </div>

                    <div class="col-sm-6 form-group">
                        <label>Module Name<sup style="color: red;">*</sup></label>
                        <input type="text" id="txtModule" class="form-control Mandatory" readonly onchange="HideErrorMessage(this)">
                        <input type="hidden" id="hdfModule" value="">
                        <span id="sptxtModule" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>

                    </div>

                    <div class="col-sm-12 form-group">
                        <label>Page Name<sup style="color: red;">*</sup></label>
                        <input type="text" id="txtPage" class="form-control Mandatory" value="" onchange="HideErrorMessage(this)">
                        <span id="sptxtPage" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>
                    <div class="col-sm-10 form-group">
                        <label>Video Link<sup style="color: red;">*</sup></label>
                        <input type="url" id="txtLink" class="form-control Mandatory" value="" onchange="HideErrorMessage(this)">
                        <span id="sptxtLink" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>

                    <div class="col-sm-2 form-group">
                        <label>Priority<sup style="color: red;">*</sup> </label>
                        <input type="number" id="txtPriority" class="form-control Mandatory" value="" onchange="HideErrorMessage(this)" style="text-align:center">
                        <span id="sptxtPriority" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>

                    <div class="col-sm-12 form-group">
                        <label>Description </label>
                        <textarea id="txtTemplate" class="form-control"></textarea>
                    </div>
                    <div class="col-sm-12 text-center">
                        <button type="button" class="btn mtr-o-grn btn-l ripplelink" name="Command" value="Add" onclick="SavePageMaster()">
                            <i class="fas fa-save"></i> Save
                        </button>
                        <button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal">
                            <i class="fas fa-times"></i> Close
                        </button>
                    </div>
                </div>
            </div>
        </div>   
    </div>
</div>
@section scripts {
    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
    <script src="~/assets/design/Scripts/AddInit.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
    <script src="~/ckeditor/ckeditor.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
    <script src="~/Areas/ModuleInfoManagment/DevScript/ModuleinfoPageMaster.js"></script>
    <script>

         CKEDITOR.replace("txtTemplate");
       var loggedinUserid = '@ViewBag.UserId';
    </script>
}