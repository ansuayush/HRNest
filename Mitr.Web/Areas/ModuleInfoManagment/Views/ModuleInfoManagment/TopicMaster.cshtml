@{
    ViewBag.Title = "TopicMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="hdnMasterTableId" />
<input type="hidden" id="hdnThematicId" />
<input type="hidden" id="hdnLoggedInUser" />

<div class="inner-main default-height pb-0">
    <div class="row">
        <div class="col-sm-5">
            <h1 class="heading-one">Topic Master </h1>
        </div>
        <div class="col-sm-7 text-right">
            <a id="AnchorAddButton" class="btn mtr-g-grn btn-l ripplelink" data-toggle="modal" data-target="#sc" onclick="SubCateGredOut()">
                <i class="fa fa-plus"></i> <span class="sbAtext">Add</span>
            </a>
        </div>
    </div>

    <div class="x_content table-currency mt-0">
        <div class="table-responsive">
            <table id="Topictable" class="table table-striped table-bordered dt-responsive nowrap tbltick new_width" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th width="20">S.No.</th>
                        <th>Module Name</th>
                        <th>Topic Name</th>
                        <th>Priority</th>
                        <th width="160">Inserted Date</th>
                        <th width="160">Updated Date</th>
                        <th width="80">Status</th>
                        <th width="80">Action</th>
                    </tr>

                    <tr class="searchbar" role="row">
                        <th class="searchhide"></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th class="searchhide"></th>
                        <th class="searchhide"></th>


                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade pop-dgn" id="sc">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title"><i class="fa fa-plus"></i> Add Topic Master</h4>
                <button type="button" class="close"style="color:white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-5 form-group">
                         <label for="DDLModulename">Module Name<sup style="color: red;">*</sup></label>
                        <select id="DDLModulename" class="form-control applyselect Mandatory" value="" onchange="HideErrorMessage(this)">
                        </select>
                        <span id="spDDLModulename" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>
                  
                    <div class="col-sm-5 form-group">
                        <label>Topic Name<sup style="color: red;">*</sup></label>
                        <input type="text" id="txttopic" class="form-control Mandatory" value="" onchange="HideErrorMessage(this)">
                        <span id="sptxttopic" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>
                    <div class="col-sm-2 form-group">
                        <label>Priority <sup style="color: red;">*</sup> </label>
                        <input type="Number" id="txtPriority" class="form-control Mandatory" value="" onchange="HideErrorMessage(this)" style="text-align:center">
                        <span id="sptxtPriority" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>
                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn mtr-o-grn btn-l ripplelink" name="Command" value="Add" onclick="SaveTopicMaster()">
                            <i class="fas fa-save"></i> Save
                        </button>
                        <button type="button" class="btn cnl-btn ripplelink" data-dismiss="modal">
                            <i class="fas fa-times"></i> Close
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")
    <script src="~/assets/design/Scripts/AddInit.js?v=@clsApplicationSetting.GetWebConfigValue("Version")"></script>
    <script src="~/Areas/ModuleInfoManagment/DevScript/ManageTopicMaster.js"></script>
    <script>
       
        var loggedinUserid = '@ViewBag.UserId';
    </script>
}