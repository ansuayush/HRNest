@using Mitr.Model.ModuleInfo
@model IList<HelpCardPAGEModel>

@{
    ViewBag.Title = "Help Cart Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int Id = Convert.ToInt32(Request.QueryString["Topic_id"]);
}

<style>
    .topic-link.active {
        color: darkgoldenrod;
    }
</style>

<div class="container-fluid">
    <div class="inner-main p-3 defult-height">
        <div class="row mb-3">
            <div class="col-sm-10 align-self-center">
                <h1 class="heading-one mb-0">@ViewBag.PageName</h1>
                
            </div>
            <div class="col-sm-2 align-self-center text-right">
                <a href="/ModuleInfoManagment/HelpCartTopic?ModuleId=@ViewBag.Moduleid" class="btn green-clr"><i class="fas fa-arrow-left"></i> Back</a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row flex-column-reverse flex-md-row">
            <div class="col-md-3 col-lg-3">
                <div class="topiclistright">
                    <h2>@ViewBag.TopicName</h2>
                    <ul class="list-unstyled topiclistdgn scroll">
                       @{ 
                           int count = 0;
                       }
                                @foreach (var page in ViewBag.Pages as List<ModuleinfoPageModel>)
                                {


                        <li>
                            @if (ViewBag.Isactive == "Yes" && count == 0)
                            {
                                <a href="/ModuleInfoManagment/HelpCartPage?ID=@page.ID&Topic_id=@ViewBag.Topic_id"
                                   class="topic-link active"
                                   data-topic-id="@page.ID">
                                    <i class="fas fa-chevron-right"></i>@page.PageName
                                </a>
                            }
                            else
                            {
                                <a href="/ModuleInfoManagment/HelpCartPage?ID=@page.ID&Topic_id=@ViewBag.Topic_id"
                                   class="topic-link"
                                   data-topic-id="@page.ID">
                                    <i class="fas fa-chevron-right"></i>@page.PageName
                                </a>
                            }

                            
                        </li>
                                    count = count + 1;
                                }
                            </ul>
                </div>
            </div>
            <div class="col-md-9 col-lg-9">
                <div class="page-section">
                    @foreach (var item in Model)
                    {
                        <div class="width-450 width-300-md width-100pc-xs paragraph-inline">
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe src="@item.Video_link" frameborder="0" allowfullscreen></iframe>
                            </div>
                        </div>
                        <p>@Html.Raw(item.Description)</p>
                    }
                </div>
            </div>
            
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        var urlParams = new URLSearchParams(window.location.search);
        var currentTopicId = urlParams.get('ID'); 
        if (currentTopicId) {
            $('a[data-topic-id="' + currentTopicId + '"]').addClass('active');
        }

        $('.topic-link').on('click', function() {
            $('.topic-link').removeClass('active');
            $(this).addClass('active');
        });
    });
</script>
